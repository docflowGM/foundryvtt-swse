{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "swse://schemas/class-archetypes.schema.json",
  "title": "SWSE Class Archetypes",
  "type": "object",
  "required": [
    "classes"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string"
    },
    "generatedFrom": {
      "type": "string"
    },
    "classes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "archetypes"
        ],
        "additionalProperties": true,
        "properties": {
          "label": {
            "type": "string"
          },
          "archetypes": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "required": [
                "name",
                "status",
                "mechanicalBias",
                "roleBias",
                "attributeBias",
                "talentKeywords",
                "featKeywords",
                "notes"
              ],
              "additionalProperties": true,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "active",
                    "stub"
                  ]
                },
                "description": {
                  "type": "string"
                },
                "mechanicalBias": {
                  "type": [
                    "object",
                    "array"
                  ],
                  "additionalProperties": true
                },
                "roleBias": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "number"
                  }
                },
                "attributeBias": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "number"
                  }
                },
                "talentKeywords": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "featKeywords": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "notes": {
                  "type": [
                    "string",
                    "array"
                  ],
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
