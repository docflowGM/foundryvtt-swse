{
  "id": "swse",
  "title": "Star Wars Saga Edition",
  "description": "A FoundryVTT system for Star Wars Saga Edition, including automated character sheets, classes, feats, force powers, and more.",
  "version": "1.0.3",
  "authors": [
    {
      "name": "Doc Flow",
      "url": "https://github.com/docflowGM",
      "discord": "DocFlow#0001"
    }
  ],
  "compatibility": {
    "minimum": "11",
    "verified": "13",
    "maximum": "13"
  },
  "license": "MIT",
  "readme": "https://github.com/docflowGM/foundryvtt-swse/blob/main/README.md",
  "bugs": "https://github.com/docflowGM/foundryvtt-swse/issues",
  "changelog": "https://github.com/docflowGM/foundryvtt-swse/blob/main/CHANGELOG.md",
  "url": "https://github.com/docflowGM/foundryvtt-swse",
  "manifest": "https://raw.githubusercontent.com/docflowGM/foundryvtt-swse/main/system.json",
  "download": "https://github.com/docflowGM/foundryvtt-swse/archive/refs/heads/main.zip",

  "esmodules": [
    "index.js"
  ],

  "styles": [
    "styles/swse.css",
    "styles/swse-levelup.css",
    "styles/swse-vehicles.css"
  ],

  "packs": [
    { "name": "swse-classes", "label": "SWSE Classes", "path": "data/classes.json", "type": "Item" },
    { "name": "swse-equipment", "label": "SWSE Equipment", "path": "data/equipment.json", "type": "Item" },
    { "name": "swse-feats", "label": "SWSE Feats", "path": "data/feats.json", "type": "Item" },
    { "name": "swse-talents", "label": "SWSE Talents", "path": "data/talents.json", "type": "Item" },
    { "name": "swse-vehicles", "label": "SWSE Vehicles", "path": "data/vehicles.json", "type": "Actor" },
    { "name": "swse-armor-light", "label": "SWSE Armor (Light)", "path": "data/armor/light.json", "type": "Item" },
    { "name": "swse-armor-heavy", "label": "SWSE Armor (Heavy)", "path": "data/armor/heavy.json", "type": "Item" },
    { "name": "swse-droids", "label": "SWSE Droids", "path": "data/droids.json", "type": "Actor" },
    { "name": "swse-skills", "label": "SWSE Skills", "path": "data/skills.json", "type": "Item" },
    { "name": "swse-attributes", "label": "SWSE Attributes", "path": "data/attributes.json", "type": "Item" },
    { "name": "swse-combat-actions", "label": "SWSE Combat Actions", "path": "data/combat-actions.json", "type": "Item" },
    { "name": "swse-conditions", "label": "SWSE Conditions", "path": "data/conditions.json", "type": "Item" },
    { "name": "swse-extra-skill-uses", "label": "SWSE Extra Skill Uses", "path": "data/extraskilluses.json", "type": "Item" },
    { "name": "swse-force-powers", "label": "SWSE Force Powers", "path": "data/forcepowers.json", "type": "Item" },
    { "name": "swse-special-combat-conditions", "label": "SWSE Special Combat Conditions", "path": "data/special-combat-condition.json", "type": "Item" },
    { "name": "swse-weapons", "label": "SWSE Weapons", "path": "data/weapons.json", "type": "Item" }
  ],

  "languages": [
    { "lang": "en", "name": "English", "path": "lang/en.json" }
  ],

  "grid": { "distance": 1, "units": "m" },
  "initiative": "1d20",

  "actorTypes": ["character", "droid", "vehicle", "npc"],
  "primaryActorType": "character",

  "primaryTokenAttribute": "system.hp.value",
  "secondaryTokenAttribute": "system.defenses.reflex.total",

  "background": ""
}
