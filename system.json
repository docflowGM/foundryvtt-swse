{
  "name": "swse",
  "title": "Star Wars Saga Edition (SWSE)",
  "description": "A Foundry VTT system for Star Wars Saga Edition, featuring modular character, droid, vehicle & force-power sheets; dialog-driven leveling, attacks, Force checks; compendium support for armor, classes, equipment, feats, force powers, talents, and weapons.",
  "version": "1.0.0",
  "license": "CC BY-SA 4.0",
  "authors": [
    {
      "name": "DocflowGM",
      "url": "https://github.com/docflowGM"
    }
  ],
  "system": true,
  "primary": true,
  "templateVersion": "11",
  "minimumCoreVersion": "11",
  "compatibleCoreVersion": "13",
  "url": "https://github.com/docflowGM/foundryvtt-swse",
  "manifest": "https://raw.githubusercontent.com/docflowGM/foundryvtt-swse/main/system.json",
  "download": "https://github.com/docflowGM/foundryvtt-swse/archive/refs/heads/main.zip",
  "entityTypes": {
    "Actor": ["character", "droid", "vehicle"],
    "Item": ["armor", "class", "equipment", "feat", "forcepower", "talent", "weapon"]
  },
  "esmodules": [
    "scripts/init.js",
    "scripts/races.js",
    "scripts/swse.js",
    "scripts/swse-actor.js",
    "scripts/swse-droid.js",
    "scripts/swse-vehicle.js",
    "scripts/swse-item.js",
    "scripts/swse-force.js",
    "scripts/swse-levelup.js",
    "scripts/swse-data.js",
    "scripts/load-templates.js"
  ],
  "styles": [
    "styles/swse.css",
    "styles/swse-levelup.css",
    "styles/swse-vehicles.css"
  ],
  "packs": [
    {
      "name": "swse-armor",
      "label": "SWSE Armor",
      "path": "packs/armor.json",
      "entity": "Item"
    },
    {
      "name": "swse-classes",
      "label": "SWSE Classes",
      "path": "packs/classes.json",
      "entity": "Item"
    },
    {
      "name": "swse-equipment",
      "label": "SWSE Equipment",
      "path": "packs/equipment.json",
      "entity": "Item"
    },
    {
      "name": "swse-feats",
      "label": "SWSE Feats",
      "path": "packs/feats.json",
      "entity": "Item"
    },
    {
      "name": "swse-forcepowers",
      "label": "SWSE Force Powers",
      "path": "packs/forcepowers.json",
      "entity": "Item"
    },
    {
      "name": "swse-talents",
      "label": "SWSE Talents",
      "path": "packs/talents.json",
      "entity": "Item"
    },
    {
      "name": "swse-weapons",
      "label": "SWSE Weapons",
      "path": "packs/weapons.json",
      "entity": "Item"
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "gridDistance": 1,
  "gridUnits": "m",
  "preloadTemplates": [
    "systems/swse/templates/actor/character-sheet.hbs",
    "systems/swse/templates/actor/droid-sheet.hbs",
    "systems/swse/templates/actor/vehicle-sheet.hbs",
    "systems/swse/templates/item/item-sheet.hbs"
  ]
}
