{
  "id": "foundryvtt-swse",
  "title": "Star Wars Saga Edition",
  "description": "Complete Star Wars Saga Edition implementation for FoundryVTT with automated character sheets, combat mechanics, Force powers, vehicles, and comprehensive game rules.",
  "version": "1.2.0",
  "compatibility": {
    "minimum": "11",
    "verified": "12",
    "maximum": "13"
  },
  "authors": [
    {
      "name": "Doc Flow",
      "url": "https://github.com/docflowGM",
      "discord": "DocFlow#0001"
    }
  ],
  "license": "MIT",
  "readme": "https://github.com/docflowGM/foundryvtt-swse/blob/main/README.md",
  "bugs": "https://github.com/docflowGM/foundryvtt-swse/issues",
  "changelog": "https://raw.githubusercontent.com/docflowGM/foundryvtt-swse/main/CHANGELOG.md",
  "url": "https://github.com/docflowGM/foundryvtt-swse",
  "manifest": "https://raw.githubusercontent.com/docflowGM/foundryvtt-swse/main/system.json",
  "download": "https://github.com/docflowGM/foundryvtt-swse/releases/download/v1.2.0/foundryvtt-swse.zip",

  "esmodules": [
    "index.js",
    "scripts/progression/talents/TalentNode.js",
    "scripts/progression/talents/TalentTreeGraph.js",
    "scripts/progression/utils/PrerequisiteEnricher.js",
    "scripts/progression/RuleEngine.js",
    "scripts/progression/talents/TalentTreeRegistry.js",
    "init-talents.js"
  ],

  "styles": [
    "styles/swse-system.css",
    "styles/core/swse-base.css",
    "styles/core/canvas-safety.css",
    "styles/fixes/canvas-viewport-fix.css",
    "styles/themes/swse-theme-holo.css",
    "styles/themes/swse-theme-high-contrast.css",
    "styles/themes/swse-theme-starship.css",
    "styles/themes/swse-theme-sand-people.css",
    "styles/themes/swse-theme-jedi.css",
    "styles/themes/swse-theme-high-republic.css",
    "styles/apps/chargen/chargen.css",
    "styles/apps/chargen/chargen-templates.css",
    "styles/apps/combat-action-browser.css",
    "styles/apps/force-power-picker.css",
    "styles/apps/vehicle-modification.css",
    "styles/apps/upgrade-app.css",
    "styles/apps/houserules.css",
    "styles/apps/custom-item-dialog.css",
    "styles/sheets/character-sheet.css",
    "styles/sheets/vehicle-sheet.css",
    "styles/sheets/unified-sheets.css",
    "styles/sheets/skill-actions.css",
    "styles/sheets/feat-actions.css",
    "styles/sheets/sheet-improvements.css",
    "styles/sheets/improved-contrast.css",
    "styles/combat/combat-enhancements.css",
    "styles/combat/vehicle-combat.css",
    "styles/components/assets-tab.css",
    "styles/progression/ability-rolling.css",
    "styles/mentor.css",
    "styles/sheets/droid-level3.css",
    "styles/sheets/vehicle-level3.css",
    "styles/npc-level3.css",
    "styles/species/species-traits.css"
  ],

  "languages": [
    { "lang": "en", "name": "English", "path": "lang/en.json" },
    { "lang": "es", "name": "Español", "path": "lang/es.json" },
    { "lang": "fr", "name": "Français", "path": "lang/fr.json" },
    { "lang": "de", "name": "Deutsch", "path": "lang/de.json" },
    { "lang": "ru", "name": "Русский", "path": "lang/ru.json" }
  ],

  "socket": true,
  "initiative": "1d20 + @abilities.dex.mod + @initiative.misc",
  "grid": { "distance": 1.5, "units": "m", "type": 1 },
  "primaryTokenAttribute": "hp",
  "secondaryTokenAttribute": "defenses.reflex",

  "background": "assets/backgrounds/swse-bg.webp",

  "media": [
    { "type": "cover", "url": "assets/ui/swse-cover.webp" },
    { "type": "icon", "url": "assets/ui/title-logo.png" }
  ],

  "packs": [ /* unchanged — your existing packs block is valid */ ],

  "settings": {
    "foundryvtt-swse.actorValidationMigration": {
      "scope": "world",
      "config": false,
      "type": "Boolean",
      "default": false
    },
    "foundryvtt-swse.itemValidationMigration": {
      "scope": "world",
      "config": false,
      "type": "Boolean",
      "default": false
    },
    "foundryvtt-swse.forceCompendiumsPopulation": {
      "scope": "world",
      "config": false,
      "type": "Boolean",
      "default": false
    }
  }
}