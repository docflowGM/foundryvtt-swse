{
  "id": "swse",
  "title": "Star Wars Saga Edition (SWSE)",
  "description": "A community-created system for running Star Wars Saga Edition in FoundryVTT.",
  "version": "0.1.0",

  "authors": [
    {
      "name": "docflowGM",
      "url": "https://github.com/docflowGM"
    }
  ],

  "url": "https://github.com/docflowGM/foundryvtt-swse",
  "manifest": "https://raw.githubusercontent.com/docflowGM/foundryvtt-swse/main/system.json",
  "download": "https://github.com/docflowGM/foundryvtt-swse/archive/refs/heads/main.zip",

  "compatibility": {
    "minimum": "11",
    "verified": "13",
    "maximum": "13"
  },

  "esmodules": [
    "system/swse.js"
  ],
  "scripts": [],
  "styles": [
    "system/swse.css"
  ],

  "packs": [
    { "name": "swse-classes",      "label": "SWSE Classes",      "path": "packs/swse-classes.db",      "type": "Item" },
    { "name": "swse-talents",      "label": "SWSE Talents",      "path": "packs/swse-talents.db",      "type": "Item" },
    { "name": "swse-feats",        "label": "SWSE Feats",        "path": "packs/swse-feats.db",        "type": "Item" },
    { "name": "swse-equipment",    "label": "SWSE Equipment",    "path": "packs/swse-equipment.db",    "type": "Item" },
    { "name": "swse-weapons",      "label": "SWSE Weapons",      "path": "packs/swse-weapons.db",      "type": "Item" },
    { "name": "swse-armor",        "label": "SWSE Armor",        "path": "packs/swse-armor.db",        "type": "Item" },
    { "name": "swse-forcepowers",  "label": "SWSE Force Powers", "path": "packs/swse-forcepowers.db",  "type": "Item" },
    { "name": "swse-skills",       "label": "SWSE Skills",       "path": "packs/swse-skills.db",       "type": "Item" },
    { "name": "swse-combat",       "label": "SWSE Combat Actions","path": "packs/swse-combat.db",      "type": "Item" },
    { "name": "swse-conditions",   "label": "SWSE Conditions",   "path": "packs/swse-conditions.db",   "type": "Item" },
    { "name": "swse-special-conditions","label": "SWSE Special Combat Conditions","path": "packs/swse-special-conditions.db","type": "Item" },
    { "name": "swse-extraskills",  "label": "SWSE Extra Skills", "path": "packs/swse-extraskills.db",  "type": "Item" },
    { "name": "swse-vehicles",     "label": "SWSE Vehicles",     "path": "packs/swse-vehicles.db",     "type": "Actor" },
    { "name": "swse-droids",       "label": "SWSE Droids",       "path": "packs/swse-droids.db",       "type": "Actor" },
    { "name": "swse-races",        "label": "SWSE Races",        "path": "packs/swse-races.db",        "type": "Item" },
    { "name": "swse-attributes",   "label": "SWSE Attributes",   "path": "packs/swse-attributes.db",   "type": "Item" }
  ],

  "grid": {
    "distance": 1,
    "units": "m"
  },

  "initiative": "1d20",
  "socket": true,

  "actorTypes": [
    "character",
    "npc",
    "vehicle",
    "droid"
  ],

  "primaryActorType": "character"
}
