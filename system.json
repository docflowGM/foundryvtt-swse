{
  "id": "swse",
  "title": "Star Wars Saga Edition (SWSE)",
  "description": "A community‐created system for running Star Wars Saga Edition in FoundryVTT.",
  "version": "0.1.0",

  "authors": [
    { "name": "docflowGM", "url": "https://github.com/docflowGM" }
  ],

  "url": "https://github.com/docflowGM/foundryvtt-swse",
  "manifest": "https://raw.githubusercontent.com/docflowGM/foundryvtt-swse/main/system.json",
  "download": "https://github.com/docflowGM/foundryvtt-swse/releases/download/v0.1.0/swse.zip",

  "compatibility": {
    "minimum": "11",
    "verified": "13",
    "maximum": "13"
  },

  "esmodules": [
    "scripts/swse.js",
    "scripts/chargen.js"
  ],

  "styles": [
    "styles/swse.css"
  ],

  "templates": "templates",

  "packs": [
    {
      "name": "swse-classes",
      "label": "SWSE Classes",
      "description": "Class data for SWSE characters",
      "path": "packs/swse-classes.db",
      "type": "Item"
    },
    {
      "name": "swse-talents",
      "label": "SWSE Talents",
      "description": "Talent data for SWSE characters",
      "path": "packs/swse-talents.db",
      "type": "Item"
    },
    {
      "name": "swse-feats",
      "label": "SWSE Feats",
      "description": "Feat data for SWSE characters",
      "path": "packs/swse-feats.db",
      "type": "Item"
    },
    {
      "name": "swse-vehicles",
      "label": "SWSE Vehicles",
      "description": "Vehicle data for SWSE",
      "path": "packs/swse-vehicles.db",
      "type": "Actor"
    },
    {
      "name": "swse-equipment",
      "label": "SWSE Equipment",
      "description": "Equipment data for SWSE",
      "path": "packs/swse-equipment.db",
      "type": "Item"
    }
  ],

  "languages": [
    { "lang": "en", "name": "English", "path": "lang/en.json" },
    { "lang": "fr", "name": "Français", "path": "lang/fr.json" }
  ],

  "grid": {
    "distance": 1,
    "units": "m"
  },

  "initiative": "1d20",
  "socket": true,

  "actorTypes": [
    "character",
    "vehicle",
    "npc"
  ],

  "systemSettings": [
    {
      "key": "overrideActorCreate",
      "name": "Override Actor Creation",
      "hint": "Enable or disable the custom actor creation dialog.",
      "scope": "client",
      "config": true,
      "type": "Boolean",
      "default": true
    }
  ]
}
