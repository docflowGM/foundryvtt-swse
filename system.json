{
  "id": "swse",
  "title": "Star Wars Saga Edition (SWSE)",
  "description": "A community-created system for running Star Wars Saga Edition in FoundryVTT.",
  "version": "0.1.0",

  "authors": [
    { "name": "docflowGM", "url": "https://github.com/docflowGM" }
  ],

  "url": "https://github.com/docflowGM/foundryvtt-swse",
  "manifest": "https://raw.githubusercontent.com/docflowGM/foundryvtt-swse/main/system.json",
  "download": "https://github.com/docflowGM/foundryvtt-swse/archive/refs/heads/main.zip",

  "compatibility": {
    "minimum": "11",
    "verified": "12",
    "maximum": "13"
  },

  "esmodules": [
    "scripts/swse.js"
  ],
  "styles": [
    "styles/swse.css"
  ],

  "packs": [
    {
      "name": "swse-classes",
      "label": "SWSE Classes",
      "path": "packs/swse-classes.db",
      "type": "Item"
    },
    {
      "name": "swse-talents",
      "label": "SWSE Talents",
      "path": "packs/swse-talents.db",
      "type": "Item"
    },
    {
      "name": "swse-feats",
      "label": "SWSE Feats",
      "path": "packs/swse-feats.db",
      "type": "Item"
    },
    {
      "name": "swse-vehicles",
      "label": "SWSE Vehicles",
      "path": "packs/swse-vehicles.db",
      "type": "Actor"
    },
    {
      "name": "swse-equipment",
      "label": "SWSE Equipment",
      "path": "packs/swse-equipment.db",
      "type": "Item"
    }
  ],

  "languages": [
    { "lang": "en", "name": "English", "path": "lang/en.json" },
    { "lang": "fr", "name": "Fran√ßais", "path": "lang/fr.json" }
  ],

  "grid": {
    "distance": 1,
    "units": "m"
  },

  "initiative": "1d20",
  "socket": true
}
