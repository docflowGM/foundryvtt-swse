    { "name": "droids", "label": "Droids", "type": "Actor", "system": "foundryvtt-swse", "path": "packs/droids.db" },
    { "name": "beasts", "label": "Beasts & Mounts", "type": "Actor", "system": "foundryvtt-swse", "path": "packs/beasts.db" }
