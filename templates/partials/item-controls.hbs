{{!-- ===========================================================
     Item Controls Component (Holo UI Enhanced)
     =========================================================== --}}
<div class="swse-item-controls" role="group" aria-label="Item Controls">

  {{!-- Edit --}}
  <a class="item-control item-edit"
     data-action="edit"
     title="Edit Item"
     aria-label="Edit Item">
    <i class="{{getIconClass 'edit'}}"></i>
  </a>

  {{!-- Delete --}}
  <a class="item-control item-delete"
     data-action="delete"
     title="Delete Item"
     aria-label="Delete Item">
    <i class="{{getIconClass 'trash'}}"></i>
  </a>

</div>
