{{!-- Static Skill Row - skill data may be undefined, provide defaults --}}
<div class="skill-row-container" data-skill="{{key}}">
 <div class="skill-row flexrow" draggable="true">
 <div class="skill-favorite-btn">
 <button class="skill-favorite-toggle" data-skill="{{key}}" title="Favorite this skill">
 <i class="{{getIconClass 'star'}} {{#if skill}}{{#if skill.favorite}}active{{/if}}{{/if}}" aria-hidden="true"></i>
 </button>
 </div>

 <div class="skill-roll-btn">
 <button class="roll-skill"
 data-skill="{{key}}"
 data-roll="1d20+@skills.{{key}}.total"
 data-label="{{label}}"
 title="Roll {{label}}">
 <i class="{{getIconClass 'diceD20'}}" aria-hidden="true"></i>
 </button>
 </div>

 <div class="skill-total {{#if skill.trained}}trained{{/if}}">
 {{#if skill}}{{numberFormat (safeNumber skill.total 0) decimals=0 sign=true}}{{else}}+0{{/if}}
 </div>

 <div class="skill-name">
 {{label}}
 </div>

 <div class="skill-ability-select">
 <select name="system.skills.{{key}}.selectedAbility" title="Ability modifier for this skill" class="ability-dropdown">
 <option value="str" {{#if skill}}{{#if (eq skill.selectedAbility 'str')}}selected{{/if}}{{else}}{{#if (eq defaultAbility 'str')}}selected{{/if}}{{/if}}>STR</option>
 <option value="dex" {{#if skill}}{{#if (eq skill.selectedAbility 'dex')}}selected{{/if}}{{else}}{{#if (eq defaultAbility 'dex')}}selected{{/if}}{{/if}}>DEX</option>
 {{#unless @root.system.isDroid}}
 <option value="con" {{#if skill}}{{#if (eq skill.selectedAbility 'con')}}selected{{/if}}{{else}}{{#if (eq defaultAbility 'con')}}selected{{/if}}{{/if}}>CON</option>
 {{/unless}}
 <option value="int" {{#if skill}}{{#if (eq skill.selectedAbility 'int')}}selected{{/if}}{{else}}{{#if (eq defaultAbility 'int')}}selected{{/if}}{{/if}}>INT</option>
 <option value="wis" {{#if skill}}{{#if (eq skill.selectedAbility 'wis')}}selected{{/if}}{{else}}{{#if (eq defaultAbility 'wis')}}selected{{/if}}{{/if}}>WIS</option>
 <option value="cha" {{#if skill}}{{#if (eq skill.selectedAbility 'cha')}}selected{{/if}}{{else}}{{#if (eq defaultAbility 'cha')}}selected{{/if}}{{/if}}>CHA</option>
 </select>
 <span class="ability-mod">{{#if skill}}{{numberFormat (safeNumber skill.abilityMod 0) decimals=0 sign=true}}{{else}}+0{{/if}}</span>
 </div>

 <div class="skill-half-level">
 {{#if @root.system.halfLevel}}{{@root.system.halfLevel}}{{else}}0{{/if}}
 </div>

 <div class="skill-trained">
 <input type="checkbox"
 name="system.skills.{{key}}.trained"
 {{#if skill}}{{checked skill.trained}}{{/if}}
 title="Trained (+5)"/>
 </div>

 <div class="skill-focus">
 <input type="checkbox"
 name="system.skills.{{key}}.focused"
 {{#if skill}}{{checked skill.focused}}{{/if}}
 title="Skill Focus (+5)"/>
 </div>

 <div class="skill-misc">
 <input type="number"
 name="system.skills.{{key}}.miscMod"
 value="{{#if skill}}{{skill.miscMod}}{{else}}0{{/if}}"
 data-dtype="Number"
 placeholder="0"
 title="Miscellaneous bonuses"/>
 </div>

 <div class="skill-actions">
 {{#if @root.skillActions}}
 {{#let (lookup @root.skillActions key)}}
 {{#if hasActions}}
 <button type="button" class="skill-actions-toggle" data-skill="{{../key}}" title="Show available actions">
 <i class="{{getIconClass 'chevronDown'}}" aria-hidden="true"></i>
 </button>
 {{/if}}
 {{/let}}
 {{/if}}
 </div>
 </div>

 {{!-- Expandable Combat Actions Section --}}
 {{#if @root.skillActions}}
 {{#let (lookup @root.skillActions key)}}
 {{#if hasActions}}
 <div class="skill-actions-panel"  data-skill="{{../key}}">

 {{#if combatActions}}
 <div class="actions-category">
 <h4><i class="{{getIconClass 'fist'}}" aria-hidden="true"></i> Combat Actions</h4>
 <div class="actions-list">
 {{#each combatActions}}
 <div class="action-item skill-use-rollable" data-skill="{{../../key}}" data-action-name="{{name}}" data-dc="{{dc.value}}" data-dc-type="{{dc.type}}" data-action-type="{{actionType}}" data-outcome="{{outcome}}" data-when="{{when}}">
 <div class="action-header">
 <strong class="action-name"><i class="{{getIconClass 'diceD20'}}" aria-hidden="true"></i> {{name}}</strong>
 <span class="action-type">{{actionType}}</span>
 {{#if cost}}
 <span class="action-cost">Cost: {{cost}}</span>
 {{/if}}
 </div>
 {{#if dc}}
 <div class="action-dc">
 <i class="{{getIconClass 'diceD20'}}" aria-hidden="true"></i>
 DC:
 {{#if dc.value}}
 {{dc.value}}
 {{else if dc.type}}
 {{dc.type}}
 {{else}}
 Varies
 {{/if}}
 </div>
 {{/if}}
 {{#if when}}
 <div class="action-when"><em>When:</em> {{when}}</div>
 {{/if}}
 {{#if outcome}}
 <div class="action-outcome"><em>Effect:</em> {{outcome}}</div>
 {{/if}}
 {{#if notes}}
 <div class="action-notes">{{notes}}</div>
 {{/if}}
 </div>
 {{/each}}
 </div>
 </div>
 {{/if}}

 {{#if extraUses}}
 {{#let (filterExtraUsesByTraining extraUses ../../../skill.trained)}}
 {{#if this}}
 <div class="actions-category extra-uses-category collapsible">
 <h4 class="category-header collapsible-toggle" data-skill="{{../../key}}">
 <i class="fa-solid fa-book" aria-hidden="true"></i> Other Skill Uses <i class="{{getIconClass 'arrowRight'}}" aria-hidden="true"></i>
 <span class="use-count">({{this.length}})</span>
 <i class="{{getIconClass 'chevronDown'}} collapse-icon" aria-hidden="true"></i>
 </h4>
 <div class="actions-list collapsible-content collapsed">
 {{#each this}}
 <div class="action-item skill-use-rollable" data-skill="{{../../../key}}" data-action-name="{{name}}" data-dc="{{dc}}" data-effect="{{effect}}">
 <div class="action-header">
 <strong class="action-name"><i class="{{getIconClass 'diceD20'}}" aria-hidden="true"></i> {{name}}</strong>
 {{#if time}}
 <span class="action-type">{{time}}</span>
 {{/if}}
 </div>
 {{#if dc}}
 <div class="action-dc">
 <i class="{{getIconClass 'diceD20'}}" aria-hidden="true"></i>
 DC: {{dc}}
 </div>
 {{/if}}
 {{#if effect}}
 <div class="action-outcome"><em>Effect:</em> {{effect}}</div>
 {{/if}}
 </div>
 {{/each}}
 </div>
 </div>
 {{/if}}
 {{/let}}
 {{/if}}

 </div>
 {{/if}}
 {{/let}}
 {{/if}}
</div>
