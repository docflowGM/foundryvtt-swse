<section class="assets-panel swse-panel">
  <h2 class="panel-title">
    <i class="{{getIconClass 'sitemap'}}" aria-hidden="true"></i> Assets
  </h2>

  {{!-- ================= FOLLOWERS ================= --}}
  <div class="assets-section followers">
    <h3 class="section-title">
      <i class="fa-solid fa-people-group" aria-hidden="true"></i> Followers
    </h3>

    {{#if system.followers}}
    <div class="assets-list">
      {{#each system.followers}}
      <div class="asset-row" data-id="{{this._id}}" tabindex="0" role="group">

        <div class="asset-left">
          <div class="asset-icon"><i class="fa-solid fa-people-group" aria-hidden="true"></i></div>
          <div class="asset-info">
            <span class="asset-title">
              {{this.name}} <small class="muted">({{this.followerType}})</small>
            </span>
            <div class="asset-meta">
              Level: {{this.level}} â€¢ Species: {{this.species}}
            </div>
          </div>
        </div>

        <div class="asset-actions">
          <button class="open-follower swse-btn"
                  data-id="{{this._id}}"
                  role="button"
                  title="Open follower sheet">
            <i class="{{getIconClass 'user'}}" aria-hidden="true"></i> Open
          </button>

          <button class="dismiss-follower swse-btn danger"
                  data-id="{{this._id}}"
                  role="button"
                  title="Dismiss follower">
            <i class="{{getIconClass 'user'}}-slash" aria-hidden="true"></i> Dismiss
          </button>
        </div>

      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="empty-placeholder muted">No followers assigned.</div>
    {{/if}}
  </div>

  {{!-- ================= DROIDS ================= --}}
  <div class="assets-section droids">
    <h3 class="section-title">
      <i class="{{getIconClass 'robot'}}" aria-hidden="true"></i> Droids
    </h3>

    {{#if system.droids}}
    <div class="assets-list">
      {{#each system.droids}}
      <div class="asset-row" data-id="{{this._id}}" tabindex="0" role="group">

        <div class="asset-left">
          <div class="asset-icon"><i class="{{getIconClass 'robot'}}" aria-hidden="true"></i></div>
          <div class="asset-info">
            <span class="asset-title">{{this.name}}</span>
            <div class="asset-meta">Model: {{this.model}}</div>
          </div>
        </div>

        <div class="asset-actions">
          <button class="open-droid swse-btn"
                  data-id="{{this._id}}"
                  role="button"
                  title="Open droid item sheet">
            <i class="{{getIconClass 'cog'}}" aria-hidden="true"></i> Open
          </button>

          {{#if ../isOwner}}
          <button class="remove-droid swse-btn danger"
                  data-id="{{this._id}}"
                  role="button"
                  title="Remove this droid">
            <i class="{{getIconClass 'trash'}}" aria-hidden="true"></i> Remove
          </button>
          {{/if}}
        </div>

      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="empty-placeholder muted">No droids owned.</div>
    {{/if}}
  </div>

  {{!-- ================= VEHICLES ================= --}}
  <div class="assets-section vehicles">
    <h3 class="section-title">
      <i class="{{getIconClass 'shuttle'}}" aria-hidden="true"></i> Vehicles
    </h3>

    {{#if system.vehicles}}
    <div class="assets-list">
      {{#each system.vehicles}}
      <div class="asset-row" data-id="{{this._id}}" tabindex="0" role="group">

        <div class="asset-left">
          <div class="asset-icon"><i class="{{getIconClass 'shuttle'}}" aria-hidden="true"></i></div>
          <div class="asset-info">
            <span class="asset-title">{{this.name}}</span>
            <div class="asset-meta">Class: {{this.vehicleClass}}</div>
          </div>
        </div>

        <div class="asset-actions">
          <button class="open-vehicle swse-btn"
                  data-id="{{this._id}}"
                  role="button"
                  title="Open vehicle sheet">
            <i class="{{getIconClass 'arrowUp'}}-right-from-square" aria-hidden="true"></i> Open
          </button>

          {{#if ../isOwner}}
          <button class="remove-vehicle swse-btn danger"
                  data-id="{{this._id}}"
                  role="button"
                  title="Remove vehicle">
            <i class="{{getIconClass 'trash'}}" aria-hidden="true"></i> Remove
          </button>
          {{/if}}
        </div>

      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="empty-placeholder muted">No vehicles owned.</div>
    {{/if}}
  </div>

</section>
