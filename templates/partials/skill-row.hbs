{{!-- Enhanced Skill Row Component --}}
<div class="skill-row">

  {{!-- 1. Roll Button (narrow + fixed) --}}
  <button 
    class="skill-roll-button"
    type="button"
    data-action="rollSkill"
    data-skill="{{@key}}"
    title="Roll {{label}}">
    ðŸŽ²
  </button>

  {{!-- 2. Skill Name --}}
  <div class="skill-name">{{label}}</div>

  {{!-- 3. Ability Dropdown (now spaced out) --}}
  <div class="skill-ability">
    <select name="system.skills.{{@key}}.ability" class="ability-select">
      {{#each ../abilities as |abil aKey|}}
        <option value="{{aKey}}" {{#if (eq aKey ability)}}selected{{/if}}>
          {{upper aKey}}
        </option>
      {{/each}}
    </select>
    <span class="ability-mod">{{abilityMod}}</span>
  </div>

  {{!-- 4. Half Level --}}
  <div class="skill-half-level">{{halfLevel}}</div>

  {{!-- 5. Training --}}
  <input 
    type="checkbox" 
    name="system.skills.{{@key}}.trained" 
    {{checked trained}} 
    class="skill-trained"
    title="Trained (+5)"
  />

  {{!-- 6. Focus --}}
  <input 
    type="checkbox" 
    name="system.skills.{{@key}}.focused" 
    {{checked focused}} 
    class="skill-focused"
    title="Focused (+5)"
  />

  {{!-- 7. Misc (bigger) --}}
  <input 
    name="system.skills.{{@key}}.misc" 
    type="number" 
    value="{{misc}}" 
    data-dtype="Number" 
    class="skill-misc big-mod"
    title="Miscellaneous Bonus"
  />

  {{!-- 8. Combat Actions dropdown (moved to the end) --}}
  <select 
    name="system.skills.{{@key}}.action" 
    class="skill-action-select"
    title="Combat / Action Type"
  >
    <option value="">â€”</option>
    <option value="standard"  {{#if (eq action "standard")}}selected{{/if}}>Standard</option>
    <option value="move"      {{#if (eq action "move")}}selected{{/if}}>Move</option>
    <option value="swift"     {{#if (eq action "swift")}}selected{{/if}}>Swift</option>
    <option value="reaction"  {{#if (eq action "reaction")}}selected{{/if}}>Reaction</option>
    <option value="free"      {{#if (eq action "free")}}selected{{/if}}>Free</option>
  </select>

</div>
