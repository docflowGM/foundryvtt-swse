<div class="swse-feat-actions-container">

  {{#if featActions}}
  
    {{#each featActions.all as |feat|}}
      <div class="feat-card {{feat.type}}">

        <div class="feat-card-header" data-expand="{{feat._id}}">
          <div class="feat-icon"><i class="{{feat.icon}}"></i></div>
          <div class="feat-title">{{feat.name}}</div>
          <div class="feat-type-label">{{feat.typeLabel}}</div>
          <div class="feat-expand-icon"><i class="fas fa-chevron-down"></i></div>
        </div>

        <div class="feat-card-body" id="feat-body-{{feat._id}}">
            
            <div class="feat-benefit">{{feat.benefit}}</div>

            {{#if feat.actions.skill}}
              <button class="feat-btn feat-roll" data-type="skill" data-id="{{feat._id}}">
                <i class="fas fa-dice-d20"></i> Roll {{feat.actions.skill.skillName}}
              </button>
            {{/if}}

            {{#if feat.actions.attack}}
              <button class="feat-btn feat-attack" data-type="attack" data-id="{{feat._id}}">
                <i class="fas fa-crosshairs"></i> Attack
              </button>
            {{/if}}

            {{#if feat.actions.conditionTrack}}
              <button class="feat-btn feat-ct" data-type="ct" data-id="{{feat._id}}">
                <i class="fas fa-arrow-circle-down"></i> Apply CT Shift
              </button>
            {{/if}}

            {{#if feat.actions.force}}
              <button class="feat-btn feat-force" data-type="force" data-id="{{feat._id}}">
                <i class="fas fa-meteor"></i> Force Effect
              </button>
            {{/if}}

            {{#if feat.uses}}
              <div class="feat-uses">
                Uses: {{feat.uses.current}} / {{feat.uses.max}}
              </div>
            {{/if}}

            <div class="feat-tags">
              {{#each feat.tags}}
                <span class="feat-tag">{{this}}</span>
              {{/each}}
            </div>

            <button class="feat-details-btn" data-id="{{feat._id}}">
              <i class="fas fa-info-circle"></i> Details
            </button>

        </div>
      </div>
    {{/each}}

  {{else}}

    <p class="feat-actions-empty">
      No feat actions available. Gain feats to unlock special abilities!
    </p>

  {{/if}}

</div>
