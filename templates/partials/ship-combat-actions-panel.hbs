{{!-- Ship Combat Actions Panel for Crew Positions --}}
<div class="crew-actions-panel"  data-position="{{position}}">
 <div class="ship-actions-list">
 {{#each actions}}
 <div class="ship-action-item">
 <div class="ship-action-header">
 <strong class="ship-action-name">{{name}}</strong>
 <span class="ship-action-type">{{actionType}}</span>
 {{#if cost}}
 <span class="ship-action-cost">Cost: {{cost}}</span>
 {{/if}}
 </div>

 {{#if relatedSkills}}
 {{#each relatedSkills}}
 {{#if dc}}
 <div class="ship-action-dc">
 <i class="{{getIconClass 'diceD20'}}" aria-hidden="true"></i>
 <strong>{{skill}}:</strong>
 DC
 {{#if dc.value}}
 {{dc.value}}
 {{!-- Add roll button for flat DCs --}}
 <button class="crew-skill-roll btn-mini"
         data-position="{{../../../position}}"
         data-skill="{{skill}}"
         data-action-name="{{../name}}"
         data-dc="{{dc.value}}"
         title="Roll {{skill}} check">
   <i class="{{getIconClass 'diceD6'}}" aria-hidden="true"></i> Roll
 </button>
 {{else if dc.type}}
 {{dc.type}}
 {{else}}
 Varies
 {{/if}}
 </div>
 {{/if}}
 {{#if when}}
 <div class="ship-action-when"><em>When:</em> {{when}}</div>
 {{/if}}
 {{#if outcome}}
 <div class="ship-action-outcome"><em>Effect:</em> {{outcome}}</div>
 {{/if}}
 {{/each}}
 {{/if}}

 {{#if notes}}
 <div class="ship-action-notes">{{notes}}</div>
 {{/if}}
 </div>
 {{/each}}
 </div>
</div>
