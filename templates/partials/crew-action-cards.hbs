{{!-- Crew Action Cards - Organized by Action Economy --}}
<div class="crew-action-cards-container">
  {{!-- Swift Actions --}}
  {{#if actions.swift.length}}
  <div class="action-economy-section">
    <h5 class="action-economy-title swift-economy">
      <i class="fas fa-bolt"></i> Swift Actions
    </h5>
    <div class="action-cards-grid">
      {{#each actions.swift as |action|}}
      <div class="action-card swift-card">
        <div class="action-card-header">
          <h4 class="action-name">{{action.name}}</h4>
          <span class="action-economy-badge swift">Swift</span>
        </div>

        {{#if action.notes}}
        <div class="action-description">{{action.notes}}</div>
        {{/if}}

        {{#if action.relatedSkills.length}}
        <div class="action-skills">
          {{#each action.relatedSkills as |skill|}}
          <div class="skill-check">
            <span class="skill-label">{{skill.skill}}</span>
            {{#if skill.dc}}
            <button class="crew-skill-roll btn-action"
                    data-position="{{../position}}"
                    data-skill="{{skill.skill}}"
                    data-action-name="{{../action.name}}"
                    data-dc="{{skill.dc.value}}"
                    title="Roll {{skill.skill}} check">
              <i class="fas fa-dice-d20"></i> Roll
            </button>
            {{#if skill.dc.value}}
            <span class="dc-value">DC {{skill.dc.value}}</span>
            {{else if skill.dc.type}}
            <span class="dc-type">{{skill.dc.type}}</span>
            {{/if}}
            {{/if}}
          </div>
          {{/each}}
        </div>
        {{/if}}
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

