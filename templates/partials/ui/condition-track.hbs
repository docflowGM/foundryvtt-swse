<div class="holo-panel hp-condition-panel">

  <div class="section-bar">
    <h3 class="section-header">Condition Track</h3>

    <label class="inline-flag">
      <input type="checkbox"
             class="swse-v2-condition-persistent"
             {{#if system.conditionTrack.persistent}}checked{{/if}} />
      Persistent
    </label>
  </div>

  <!-- CHEVRON TRACK -->
  <div class="condition-steps">

    {{#each conditionSteps as |step|}}
      <button type="button"
              class="swse-v2-condition-step {{#if step.isActive}}active{{/if}}"
              data-step="{{step.value}}">
        {{step.label}}
      </button>
    {{/each}}

  </div>

  <!-- TOTAL PENALTY DISPLAY -->
  <div class="condition-readout">

    <span class="label">Total Penalty:</span>

    <span class="value
      {{#if (eq derived.damage.conditionPenalty 0)}}zero{{/if}}
      {{#if (lt derived.damage.conditionPenalty 0)}}negative{{/if}}
      {{#if (gt derived.damage.conditionPenalty 0)}}positive{{/if}}">
      {{derived.damage.conditionPenalty}}
    </span>

    {{#if derived.damage.conditionHelpless}}
      <span class="badge">Helpless</span>
    {{/if}}

  </div>

</div>