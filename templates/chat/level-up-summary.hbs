<div class="swse-level-up-summary">
  <header class="card-header">
    <h3>Level Up!</h3>
    <div class="level-badge">Level {{newLevel}}</div>
  </header>

  <div class="card-content">
    <div class="class-info">
      <strong>{{className}}</strong> Level {{levelInClass}}
    </div>

    {{#if grants}}
    <section class="grants">
      <h4>Granted:</h4>
      <ul>
        {{#if grants.talents}}
          <li><strong>Talents:</strong> {{grants.talents}} slot(s)</li>
        {{/if}}
        {{#if grants.bonusFeats}}
          <li><strong>Bonus Feats:</strong> {{grants.bonusFeats}}</li>
        {{/if}}
        {{#if grants.forcePoints}}
          <li><strong>Force Points:</strong> +{{grants.forcePoints}}</li>
        {{/if}}
        {{#if grants.abilityIncrease}}
          <li><strong>Ability Increase:</strong> {{grants.abilityIncrease}} point(s)</li>
        {{/if}}
        {{#if grants.features}}
          {{#each grants.features}}
            <li>{{this}}</li>
          {{/each}}
        {{/if}}
      </ul>
    </section>
    {{/if}}

    {{#if choices}}
    <section class="selections">
      <h4>Selected:</h4>
      <ul>
        {{#if choices.talents}}
          <li><strong>Talents:</strong> {{#each choices.talents}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</li>
        {{/if}}
        {{#if choices.feats}}
          <li><strong>Feats:</strong> {{#each choices.feats}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</li>
        {{/if}}
        {{#if choices.abilityIncrease}}
          <li><strong>Ability Increases:</strong>
            {{#each choices.abilityIncrease}}
              {{#if this}}{{@key}} +{{this}}{{/if}}
            {{/each}}
          </li>
        {{/if}}
        {{#if choices.hp}}
          <li><strong>Hit Points:</strong> +{{choices.hp}}</li>
        {{/if}}
      </ul>
    </section>
    {{/if}}
  </div>

  <footer class="card-footer">
    <a href="https://claude.ai/code/session_{{sessionId}}">View Session</a>
  </footer>
</div>

