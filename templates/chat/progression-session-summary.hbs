<div class="swse-progression-session">
  <header class="card-header">
    <h3>
      {{#if (eq mode "chargen")}}
        Character Created!
      {{else}}
        Level Up Complete!
      {{/if}}
    </h3>
    <div class="level-badge">Level {{newLevel}}</div>
  </header>

  <div class="card-content">
    <div class="actor-info">
      <strong>{{actor.name}}</strong>
    </div>

    {{#if changes.classLevels}}
    <section class="class-levels">
      <h4>Classes:</h4>
      <ul>
        {{#each changes.classLevels}}
          <li><strong>{{this.classId}}</strong> level {{this.levelInClass}}</li>
        {{/each}}
      </ul>
    </section>
    {{/if}}

    {{#if changes.species}}
    <section class="species">
      <h4>Species:</h4>
      <p>{{changes.species.speciesId}}</p>
    </section>
    {{/if}}

    {{#if changes.background}}
    <section class="background">
      <h4>Background:</h4>
      <p>{{changes.background}}</p>
    </section>
    {{/if}}

    {{#if changes.talents}}
    <section class="talents">
      <h4>Talents Selected:</h4>
      <ul>
        {{#each changes.talents}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </section>
    {{/if}}

    {{#if changes.feats}}
    <section class="feats">
      <h4>Feats Selected:</h4>
      <ul>
        {{#each changes.feats}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </section>
    {{/if}}

    {{#if changes.skills}}
    <section class="skills">
      <h4>Skills Trained:</h4>
      <ul>
        {{#each changes.skills}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </section>
    {{/if}}

    {{#if changes.abilityIncreases}}
    <section class="ability-increases">
      <h4>Ability Increases:</h4>
      <ul>
        {{#each changes.abilityIncreases}}
          {{#if this}}
            <li><strong>{{@key}}:</strong> +{{this}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </section>
    {{/if}}

    {{#if changes.hp}}
    <section class="hp">
      <h4>HP Gained:</h4>
      <p>
        {{#each changes.hp}}
          +{{this}}{{#unless @last}}, {{/unless}}
        {{/each}}
      </p>
    </section>
    {{/if}}

    {{#if grants}}
    <section class="grants-summary">
      <h4>Session Summary:</h4>
      <ul>
        {{#if grants.talents}}
          <li>Talent slots granted: {{grants.talents}}</li>
        {{/if}}
        {{#if grants.bonusFeats}}
          <li>Bonus feats granted: {{grants.bonusFeats}}</li>
        {{/if}}
        {{#if grants.forcePoints}}
          <li>Force points granted: {{grants.forcePoints}}</li>
        {{/if}}
        {{#if grants.features}}
          <li>Features: {{#each grants.features}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</li>
        {{/if}}
      </ul>
    </section>
    {{/if}}
  </div>

  <footer class="card-footer">
    <span class="session-id">Session: {{sessionId}}</span>
  </footer>
</div>

