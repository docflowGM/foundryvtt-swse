<div class="tab summary-tab" data-tab="summary" data-group="primary">
 <div class="summary-layout">

 <!-- Combat Stats Column -->
 <div class="combat-stats">
 <h3>Combat Statistics</h3>

 <div class="stat-group">
 <label>Initiative</label>
 <div class="stat-value rollable" data-roll="1d20+@skills.initiative.total" data-label="Initiative">
 {{formatModifier system.skills.initiative.total}}
 </div>
 </div>

 <div class="stat-group">
 <label>Base Attack</label>
 <div class="stat-value">+{{system.bab}}</div>
 </div>

 <div class="stat-group">
 <label>Damage Threshold</label>
 <div class="stat-value">{{system.damageThreshold}}</div>
 </div>

 <div class="stat-group">
 <label>Speed</label>
 <div class="stat-value">{{system.speed.total}} squares</div>
 </div>
 </div>

 <!-- Condition Track Widget -->
 <div class="condition-widget">
 {{{conditionTrack}}}
 </div>

 <!-- Quick Actions -->
 <div class="quick-actions">
 <h3>Quick Actions</h3>

 <button class="action-btn" data-action="secondWind">
 <i class="fas fa-heart"></i>
 Second Wind
 {{#if system.secondWind.used}}(Used){{else}}(+{{system.secondWind.healing}} HP){{/if}}
 </button>

 <button class="action-btn" data-action="spendForcePoint">
 <i class="fas fa-bolt"></i>
 Force Point ({{system.forcePoints.value}}/{{system.forcePoints.max}})
 </button>

 <button class="action-btn" data-action="shortRest">
 <i class="fas fa-campground"></i>
 Short Rest
 </button>

 <button class="action-btn" data-action="longRest">
 <i class="fas fa-bed"></i>
 Long Rest
 </button>
 </div>

 <!-- Common Attacks -->
 <div class="attacks-list">
 <h3>Attacks</h3>
 {{#each weapons as |weapon|}}
 <div class="attack-item">
 <img src="{{weapon.img}}" alt="{{weapon.name}}">
 <span class="attack-name">{{weapon.name}}</span>
 <button class="roll-btn" data-action="rollAttack" data-item-id="{{weapon._id}}">
 <i class="fas fa-dice-d20"></i> Attack
 </button>
 <button class="roll-btn" data-action="rollDamage" data-item-id="{{weapon._id}}">
 <i class="fas fa-burst"></i> Damage
 </button>
 </div>
 {{/each}}
 </div>

 </div>
</div>
