{{!-- ============================================
     SWSE Character Sheet - Enhanced Template
     Supports: PC / NPC / Vehicle / Droid
     Features: Static skills list, sheet switching
     ============================================ --}}

<form class="swse-datapad-sheet {{cssClass}} holo-theme" autocomplete="off" data-sheet-mode="character">

  {{!-- ==================== HEADER ==================== --}}
  <header class="datapad-header">
    
    {{!-- Left: Navigation & Basic Info --}}
    <div class="header-left">
      
      {{!-- Sheet Type Tabs --}}
      <div class="header-tabs">
        <button type="button" class="header-tab active" data-sheet-mode="character">
          PC
        </button>
        <button type="button" class="header-tab" data-sheet-mode="npc">
          NPC
        </button>
        <button type="button" class="header-tab" data-sheet-mode="vehicle">
          Vehicle
        </button>
        <button type="button" class="header-tab" data-sheet-mode="droid">
          Droid
        </button>
      </div>

      {{!-- Basic Character Fields --}}
      <div class="basic-fields">
        <div class="field-trio">
          <div class="field-sm">
            <label>Class</label>
            <input name="system.class" type="text" value="{{system.class}}" placeholder="Jedi"/>
          </div>
          <div class="field-sm">
            <label>Level</label>
            <input name="system.level" type="number" value="{{system.level}}" data-dtype="Number" placeholder="1"/>
          </div>
          <div class="field-sm">
            <label>½ Level</label>
            <div class="readonly half-level-display">{{halfLevel}}</div>
          </div>
        </div>

        <div class="field-row-2">
          <div class="field-md">
            <label>Species</label>
            <input name="system.species" type="text" value="{{system.species}}" placeholder="Human"/>
          </div>
          <div class="field-md">
            <label>Background</label>
            <input name="system.background" type="text" value="{{system.background}}" placeholder="Soldier"/>
          </div>
        </div>

        <div class="field-row-2">
          <div class="field-md">
            <label>Gender</label>
            <input name="system.gender" type="text" value="{{system.gender}}" placeholder="Male"/>
          </div>
          <div class="field-md">
            <label>Size</label>
            <input name="system.size" type="text" value="{{system.size}}" placeholder="Medium"/>
          </div>
        </div>
      </div>
      
    </div>

    {{!-- Center: Logo --}}
    <div class="header-center">
      <img class="sw-logo" src="systems/swse/assets/assets/ui/logo.png" alt="Star Wars Saga Edition"/>
    </div>

    {{!-- Right: Character Portrait --}}
    <div class="header-right">
      <img class="character-portrait" 
           src="{{actor.img}}" 
           data-edit="img" 
           title="{{actor.name}}"
           alt="Character Portrait"/>
    </div>

  </header>

  {{!-- ==================== MAIN CONTENT ==================== --}}
  <div class="sheet-body">
    <div class="datapad-main-grid">

      {{!-- ==================== LEFT COLUMN ==================== --}}
      <div class="left-column">

        {{!-- ATTRIBUTES SECTION --}}
        <section class="datapad-section sheet-mode-pc">
          <div class="section-header-black">Attributes</div>
          
          <div class="attributes-grid-improved">
            {{#each system.abilities as |ability key|}}
              <div class="attribute-row-improved">
                
                {{!-- Attribute Label --}}
                <label class="attr-label">{{toUpperCase key}}</label>
                
                {{!-- Breakdown: Base, Racial, Misc, Total --}}
                <div class="attr-breakdown">
                  <div class="attr-field">
                    <label>Base</label>
                    <input type="number" 
                           name="system.abilities.{{key}}.base" 
                           value="{{ability.base}}" 
                           class="attr-input-sm" 
                           data-dtype="Number"
                           placeholder="10"/>
                  </div>
                  
                  <div class="attr-field">
                    <label>Race</label>
                    <input type="number" 
                           name="system.abilities.{{key}}.racial" 
                           value="{{ability.racial}}" 
                           class="attr-input-sm" 
                           data-dtype="Number" 
                           placeholder="0"/>
                  </div>
                  
                  <div class="attr-field">
                    <label>Misc</label>
                    <input type="number" 
                           name="system.abilities.{{key}}.misc" 
                           value="{{ability.misc}}" 
                           class="attr-input-sm" 
                           data-dtype="Number" 
                           placeholder="0"/>
                  </div>
                  
                  <div class="attr-field">
                    <label>Total</label>
                    <div class="attr-total">{{ability.total}}</div>
                  </div>
                </div>
                
                {{!-- Roll Button --}}
                <button type="button" class="roll-btn" data-ability="{{key}}" title="Roll {{toUpperCase key}} check">
                  ⚅
                </button>
                
                {{!-- Modifier Display --}}
                <div class="attr-mod" title="{{toUpperCase key}} Modifier">
                  {{#if (gte ability.mod 0)}}+{{/if}}{{ability.mod}}
                </div>
                
              </div>
            {{/each}}
          </div>
        </section>

        {{!-- DEFENSES SECTION --}}
        <section class="datapad-section sheet-mode-pc">
          <div class="section-header-black">Defenses</div>
          
          <div class="defense-table">
            
            {{!-- Table Header --}}
            <div class="defense-table-header">
              <div class="def-col-label"></div>
              <div class="def-col-value">Total</div>
              <div class="def-col-formula">=</div>
              <div class="def-col-value">10 +</div>
              <div class="def-col-value">Level/Armor</div>
              <div class="def-col-value">Class</div>
              <div class="def-col-value">Ability</div>
              <div class="def-col-value">Misc</div>
            </div>

            {{!-- REFLEX DEFENSE --}}
            <div class="defense-table-row reflex-row">
              <label class="defense-label-compact">Reflex</label>
              
              <div class="defense-total-compact reflex-total">
                {{system.defenses.reflex.total}}
              </div>
              
              <div class="defense-equals">=</div>
              <div class="defense-base">10 +</div>
              
              <input type="number" 
                     name="system.defenses.reflex.levelArmor" 
                     value="{{system.defenses.reflex.levelArmor}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
              
              <input type="number" 
                     name="system.defenses.reflex.classBonus" 
                     value="{{system.defenses.reflex.classBonus}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
              
              <select name="system.defenses.reflex.abilityMod" class="defense-select-sm">
                <option value="dex" {{#if (eq system.defenses.reflex.abilityMod "dex")}}selected{{/if}}>DEX</option>
                <option value="str" {{#if (eq system.defenses.reflex.abilityMod "str")}}selected{{/if}}>STR</option>
                <option value="con" {{#if (eq system.defenses.reflex.abilityMod "con")}}selected{{/if}}>CON</option>
                <option value="int" {{#if (eq system.defenses.reflex.abilityMod "int")}}selected{{/if}}>INT</option>
                <option value="wis" {{#if (eq system.defenses.reflex.abilityMod "wis")}}selected{{/if}}>WIS</option>
                <option value="cha" {{#if (eq system.defenses.reflex.abilityMod "cha")}}selected{{/if}}>CHA</option>
              </select>
              
              <input type="number" 
                     name="system.defenses.reflex.misc" 
                     value="{{system.defenses.reflex.misc}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
            </div>

            {{!-- FORTITUDE DEFENSE --}}
            <div class="defense-table-row fortitude-row">
              <label class="defense-label-compact">Fortitude</label>
              
              <div class="defense-total-compact fortitude-total">
                {{system.defenses.fortitude.total}}
              </div>
              
              <div class="defense-equals">=</div>
              <div class="defense-base">10 +</div>
              
              <input type="number" 
                     name="system.defenses.fortitude.levelArmor" 
                     value="{{system.defenses.fortitude.levelArmor}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
              
              <input type="number" 
                     name="system.defenses.fortitude.classBonus" 
                     value="{{system.defenses.fortitude.classBonus}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
              
              <select name="system.defenses.fortitude.abilityMod" class="defense-select-sm">
                <option value="con" {{#if (eq system.defenses.fortitude.abilityMod "con")}}selected{{/if}}>CON</option>
                <option value="str" {{#if (eq system.defenses.fortitude.abilityMod "str")}}selected{{/if}}>STR</option>
                <option value="dex" {{#if (eq system.defenses.fortitude.abilityMod "dex")}}selected{{/if}}>DEX</option>
                <option value="int" {{#if (eq system.defenses.fortitude.abilityMod "int")}}selected{{/if}}>INT</option>
                <option value="wis" {{#if (eq system.defenses.fortitude.abilityMod "wis")}}selected{{/if}}>WIS</option>
                <option value="cha" {{#if (eq system.defenses.fortitude.abilityMod "cha")}}selected{{/if}}>CHA</option>
              </select>
              
              <input type="number" 
                     name="system.defenses.fortitude.misc" 
                     value="{{system.defenses.fortitude.misc}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
            </div>

            {{!-- WILL DEFENSE --}}
            <div class="defense-table-row will-row">
              <label class="defense-label-compact">Will</label>
              
              <div class="defense-total-compact will-total">
                {{system.defenses.will.total}}
              </div>
              
              <div class="defense-equals">=</div>
              <div class="defense-base">10 +</div>
              
              <input type="number" 
                     name="system.defenses.will.levelArmor" 
                     value="{{system.defenses.will.levelArmor}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
              
              <input type="number" 
                     name="system.defenses.will.classBonus" 
                     value="{{system.defenses.will.classBonus}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
              
              <select name="system.defenses.will.abilityMod" class="defense-select-sm">
                <option value="wis" {{#if (eq system.defenses.will.abilityMod "wis")}}selected{{/if}}>WIS</option>
                <option value="str" {{#if (eq system.defenses.will.abilityMod "str")}}selected{{/if}}>STR</option>
                <option value="dex" {{#if (eq system.defenses.will.abilityMod "dex")}}selected{{/if}}>DEX</option>
                <option value="con" {{#if (eq system.defenses.will.abilityMod "con")}}selected{{/if}}>CON</option>
                <option value="int" {{#if (eq system.defenses.will.abilityMod "int")}}selected{{/if}}>INT</option>
                <option value="cha" {{#if (eq system.defenses.will.abilityMod "cha")}}selected{{/if}}>CHA</option>
              </select>
              
              <input type="number" 
                     name="system.defenses.will.misc" 
                     value="{{system.defenses.will.misc}}" 
                     class="defense-input-sm" 
                     data-dtype="Number" 
                     placeholder="0"/>
            </div>

            {{!-- Defense Notes --}}
            <div class="defense-notes">
              <label>Defense Notes</label>
              <input type="text" 
                     name="system.defenses.notes" 
                     value="{{system.defenses.notes}}" 
                     placeholder="Special defense modifiers..."/>
            </div>

          </div>
        </section>

        {{!-- ARMOR SECTION --}}
        <section class="datapad-section sheet-mode-pc">
          <div class="section-header-black">Armor</div>
          
          {{!-- Main Armor Stats --}}
          <div class="armor-main-row">
            <div class="armor-field-wide">
              <label>Armor Name</label>
              <input type="text" 
                     name="system.armor.name" 
                     value="{{system.armor.name}}" 
                     placeholder="Stormtrooper Armor"/>
            </div>
            
            <div class="armor-field-sm">
              <label>Def Mod Bonus</label>
              <input type="number" 
                     name="system.armor.defModBonus" 
                     value="{{system.armor.defModBonus}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
            </div>
            
            <div class="armor-field-sm">
              <label>Fort Def Bonus</label>
              <input type="number" 
                     name="system.armor.fortDefBonus" 
                     value="{{system.armor.fortDefBonus}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
            </div>
            
            <div class="armor-field-sm">
              <label>Max Dex Bonus</label>
              <input type="number" 
                     name="system.armor.maxDexBonus" 
                     value="{{system.armor.maxDexBonus}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
            </div>
            
            <div class="armor-field-sm">
              <label>Speed Penalty</label>
              <input type="number" 
                     name="system.armor.speed" 
                     value="{{system.armor.speed}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
            </div>
          </div>

          {{!-- Armor Checkboxes & Selects --}}
          <div class="armor-checkboxes-row">
            <div class="armor-checkbox-group">
              <label>
                <input type="checkbox" 
                       name="system.armor.proficiency" 
                       {{#if system.armor.proficiency}}checked{{/if}}/>
                Proficiency
              </label>
            </div>
            
            <div class="armor-checkbox-group">
              <label>
                <input type="checkbox" 
                       name="system.armor.armoredDefense" 
                       {{#if system.armor.armoredDefense}}checked{{/if}}/>
                Armored Defense
              </label>
            </div>
            
            <div class="armor-checkbox-group">
              <label>
                <input type="checkbox" 
                       name="system.armor.improvedArmoredDef" 
                       {{#if system.armor.improvedArmoredDef}}checked{{/if}}/>
                Improved Armored Def.
              </label>
            </div>
            
            <div class="armor-select-group">
              <label>Armor Type</label>
              <select name="system.armor.type">
                <option value="none" {{#if (eq system.armor.type "none")}}selected{{/if}}>None</option>
                <option value="light" {{#if (eq system.armor.type "light")}}selected{{/if}}>Light</option>
                <option value="medium" {{#if (eq system.armor.type "medium")}}selected{{/if}}>Medium</option>
                <option value="heavy" {{#if (eq system.armor.type "heavy")}}selected{{/if}}>Heavy</option>
              </select>
            </div>
            
            <div class="armor-select-group">
              <label>Helmet Package</label>
              <select name="system.armor.helmetPackage">
                <option value="none" {{#if (eq system.armor.helmetPackage "none")}}selected{{/if}}>None</option>
                <option value="basic" {{#if (eq system.armor.helmetPackage "basic")}}selected{{/if}}>Basic</option>
                <option value="advanced" {{#if (eq system.armor.helmetPackage "advanced")}}selected{{/if}}>Advanced</option>
              </select>
            </div>
          </div>

          {{!-- Armor Notes --}}
          <div class="armor-notes">
            <label>Armor Notes</label>
            <input type="text" 
                   name="system.armor.notes" 
                   value="{{system.armor.notes}}" 
                   placeholder="Special armor properties..."/>
          </div>
        </section>

        {{!-- SKILLS SECTION - STATIC LIST --}}
        <section class="datapad-section sheet-mode-pc">
          <div class="section-header-black">Skills</div>
          
          <div class="skills-grid-compact">
            
            {{!-- Skills Header --}}
            <div class="skills-header">
              <div>Skill</div>
              <div>Ability</div>
              <div>½ Lvl</div>
              <div>Train</div>
              <div>Focus</div>
              <div>Armor</div>
              <div>Misc</div>
              <div>Total</div>
            </div>

            {{!-- ACROBATICS (DEX) --}}
            <div class="skill-row" data-skill="acrobatics">
              <div class="skill-name">Acrobatics</div>
              <div class="skill-ability">DEX</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.acrobatics.trained" 
                     {{#if system.skills.acrobatics.trained}}checked{{/if}}
                     title="Trained (+5)"/>
              <input type="checkbox" 
                     name="system.skills.acrobatics.focused" 
                     {{#if system.skills.acrobatics.focused}}checked{{/if}}
                     title="Skill Focus (+5)"/>
              <input type="number" 
                     name="system.skills.acrobatics.armor" 
                     value="{{system.skills.acrobatics.armor}}" 
                     data-dtype="Number" 
                     placeholder="0" 
                     class="skill-input"/>
              <input type="number" 
                     name="system.skills.acrobatics.misc" 
                     value="{{system.skills.acrobatics.misc}}" 
                     data-dtype="Number" 
                     placeholder="0" 
                     class="skill-input"/>
              <div class="skill-total">{{system.skills.acrobatics.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="acrobatics" title="Roll Acrobatics">⚅</button>
            </div>

            {{!-- CLIMB (STR) --}}
            <div class="skill-row" data-skill="climb">
              <div class="skill-name">Climb</div>
              <div class="skill-ability">STR</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.climb.trained" 
                     {{#if system.skills.climb.trained}}checked{{/if}}/>
              <input type="checkbox" 
                     name="system.skills.climb.focused" 
                     {{#if system.skills.climb.focused}}checked{{/if}}/>
              <input type="number" 
                     name="system.skills.climb.armor" 
                     value="{{system.skills.climb.armor}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <input type="number" 
                     name="system.skills.climb.misc" 
                     value="{{system.skills.climb.misc}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <div class="skill-total">{{system.skills.climb.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="climb">⚅</button>
            </div>

            {{!-- DECEPTION (CHA) --}}
            <div class="skill-row" data-skill="deception">
              <div class="skill-name">Deception</div>
              <div class="skill-ability">CHA</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.deception.trained" 
                     {{#if system.skills.deception.trained}}checked{{/if}}/>
              <input type="checkbox" 
                     name="system.skills.deception.focused" 
                     {{#if system.skills.deception.focused}}checked{{/if}}/>
              <input type="number" 
                     name="system.skills.deception.armor" 
                     value="{{system.skills.deception.armor}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <input type="number" 
                     name="system.skills.deception.misc" 
                     value="{{system.skills.deception.misc}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <div class="skill-total">{{system.skills.deception.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="deception">⚅</button>
            </div>

            {{!-- ENDURANCE (CON) --}}
            <div class="skill-row" data-skill="endurance">
              <div class="skill-name">Endurance</div>
              <div class="skill-ability">CON</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.endurance.trained" 
                     {{#if system.skills.endurance.trained}}checked{{/if}}/>
              <input type="checkbox" 
                     name="system.skills.endurance.focused" 
                     {{#if system.skills.endurance.focused}}checked{{/if}}/>
              <input type="number" 
                     name="system.skills.endurance.armor" 
                     value="{{system.skills.endurance.armor}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <input type="number" 
                     name="system.skills.endurance.misc" 
                     value="{{system.skills.endurance.misc}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <div class="skill-total">{{system.skills.endurance.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="endurance">⚅</button>
            </div>

            {{!-- GATHER INFORMATION (CHA) --}}
            <div class="skill-row" data-skill="gatherInformation">
              <div class="skill-name">Gather Information</div>
              <div class="skill-ability">CHA</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.gatherInformation.trained" 
                     {{#if system.skills.gatherInformation.trained}}checked{{/if}}/>
              <input type="checkbox" 
                     name="system.skills.gatherInformation.focused" 
                     {{#if system.skills.gatherInformation.focused}}checked{{/if}}/>
              <input type="number" 
                     name="system.skills.gatherInformation.armor" 
                     value="{{system.skills.gatherInformation.armor}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <input type="number" 
                     name="system.skills.gatherInformation.misc" 
                     value="{{system.skills.gatherInformation.misc}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <div class="skill-total">{{system.skills.gatherInformation.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="gatherInformation">⚅</button>
            </div>

            {{!-- INITIATIVE (DEX) --}}
            <div class="skill-row" data-skill="initiative">
              <div class="skill-name">Initiative</div>
              <div class="skill-ability">DEX</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.initiative.trained" 
                     {{#if system.skills.initiative.trained}}checked{{/if}}/>
              <input type="checkbox" 
                     name="system.skills.initiative.focused" 
                     {{#if system.skills.initiative.focused}}checked{{/if}}/>
              <input type="number" 
                     name="system.skills.initiative.armor" 
                     value="{{system.skills.initiative.armor}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <input type="number" 
                     name="system.skills.initiative.misc" 
                     value="{{system.skills.initiative.misc}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <div class="skill-total">{{system.skills.initiative.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="initiative">⚅</button>
            </div>

            {{!-- JUMP (STR) --}}
            <div class="skill-row" data-skill="jump">
              <div class="skill-name">Jump</div>
              <div class="skill-ability">STR</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.jump.trained" 
                     {{#if system.skills.jump.trained}}checked{{/if}}/>
              <input type="checkbox" 
                     name="system.skills.jump.focused" 
                     {{#if system.skills.jump.focused}}checked{{/if}}/>
              <input type="number" 
                     name="system.skills.jump.armor" 
                     value="{{system.skills.jump.armor}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <input type="number" 
                     name="system.skills.jump.misc" 
                     value="{{system.skills.jump.misc}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <div class="skill-total">{{system.skills.jump.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="jump">⚅</button>
            </div>

            {{!-- KNOWLEDGE (INT) --}}
            <div class="skill-row" data-skill="knowledge">
              <div class="skill-name">Knowledge</div>
              <div class="skill-ability">INT</div>
              <div class="skill-half-level">{{halfLevel}}</div>
              <input type="checkbox" 
                     name="system.skills.knowledge.trained" 
                     {{#if system.skills.knowledge.trained}}checked{{/if}}/>
              <input type="checkbox" 
                     name="system.skills.knowledge.focused" 
                     {{#if system.skills.knowledge.focused}}checked{{/if}}/>
              <input type="number" 
                     name="system.skills.knowledge.armor" 
                     value="{{system.skills.knowledge.armor}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <input type="number" 
                     name="system.skills.knowledge.misc" 
                     value="{{system.skills.knowledge.misc}}" 
                     data-dtype="Number" 
                     placeholder="0"/>
              <div class="skill-total">{{system.skills.knowledge.total}}</div>
              <button type="button" class="roll-btn-sm" data-skill="knowledge">⚅</button>
            </div>

            {{!-- MECHANICS (INT) --}}
            <div class="skill-row" data-skill="mechanics">
