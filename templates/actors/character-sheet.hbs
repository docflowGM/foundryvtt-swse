{{!-- SWSE Character Sheet - Enhanced Header + Skills Layout --}}
<form class="swse-datapad-sheet {{cssClass}} holo-theme" autocomplete="off">
    
    {{!-- ======================= TOP HEADER ======================= --}}
    <header class="datapad-header">
        <div class="header-left">
            <div class="header-tabs clean-tabs">
                <button type="button" class="header-tab active" data-sheet-mode="character">PC</button>
                <button type="button" class="header-tab" data-sheet-mode="npc">NPC</button>
                <button type="button" class="header-tab" data-sheet-mode="vehicle">Vehicle</button>
                <button type="button" class="header-tab" data-sheet-mode="settings">⚙</button>
            </div>
            
            <div class="basic-fields enhanced-fields">
                <div class="field-trio">
                    <div class="field-sm">
                        <label>Class</label>
                        <input name="system.class" type="text" value="{{system.class}}" placeholder="Class"/>
                    </div>
                    <div class="field-sm">
                        <label>Level</label>
                        <input name="system.level" type="number" value="{{system.level}}" data-dtype="Number" placeholder="1"/>
                    </div>
                    <div class="field-sm">
                        <label>½ Lvl</label>
                        <div class="readonly half-level-display holo-text">{{halfLevel}}</div>
                    </div>
                </div>

                <div class="field-row-2">
                    <div class="field-md">
                        <label>Species</label>
                        <input name="system.species" type="text" value="{{system.species}}" placeholder="Human"/>
                    </div>
                    <div class="field-md">
                        <label>Background</label>
                        <input name="system.background" type="text" value="{{system.background}}" placeholder="Spacer"/>
                    </div>
                </div>

                <div class="field-row-2">
                    <div class="field-md">
                        <label>Gender</label>
                        <input name="system.gender" type="text" value="{{system.gender}}" placeholder="M/F/Other"/>
                    </div>
                    <div class="field-md">
                        <label>Size</label>
                        <input name="system.size" type="text" value="{{system.size}}" placeholder="Medium"/>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="header-center holo-header-center">
            <img class="sw-logo" src="systems/swse/assets/ui/logo.png" alt="Star Wars Saga Edition"/>
        </div>
        
        <div class="header-right holo-header-right">
            <img class="character-portrait holo-portrait" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
            <div class="portrait-buttons">
                <button type="button" class="portrait-btn edit" title="Edit Image">✎</button>
                <button type="button" class="portrait-btn refresh" title="Refresh">↻</button>
            </div>
        </div>
    </header>

    {{!-- ======================= MAIN BODY ======================= --}}
    <div class="datapad-main-grid scrollable-content">
        <div class="left-column">

            {{!-- ATTRIBUTES --}}
            {{> "systems/swse/templates/partials/attributes.hbs"}}

            {{!-- DEFENSES --}}
            {{> "systems/swse/templates/partials/defenses.hbs"}}

            {{!-- ARMOR --}}
            {{> "systems/swse/templates/partials/armor.hbs"}}

            {{!-- ======================= SKILLS ======================= --}}
            <section class="datapad-section">
                <div class="section-header-black">Skills</div>
                
                <div class="skills-grid holo-grid">
                    <div class="skills-header">
                        <div class="col-skill-name">Skill</div>
                        <div class="col-trained">T</div>
                        <div class="col-bonus">Bonus</div>
                        <div class="col-roll">Roll</div>
                    </div>

                    {{#each defaultSkills as |skill|}}
                    <div class="skill-row holo-row {{#if skill.trained}}trained{{/if}}">
                        <div class="col-skill-name">
                            <span class="skill-tooltip" title="Associated Ability: {{skill.ability}}">{{skill.name}}</span>
                        </div>
                        <div class="col-trained">
                            <input type="checkbox" class="skill-trained" {{#if skill.trained}}checked{{/if}}/>
                        </div>
                        <div class="col-bonus">{{#if (gte skill.bonus 0)}}+{{/if}}{{skill.bonus}}</div>
                        <div class="col-roll">
                            <button type="button" class="roll-btn-sm" data-skill="{{skill.name}}">⚅</button>
                        </div>
                    </div>
                    {{/each}}

                    <div class="custom-skills-divider">✦ Custom Skills ✦</div>

                    {{#each customSkills as |skill index|}}
                    <div class="skill-row custom-skill-row holo-row">
                        <input type="text" class="skill-name-input" name="system.customSkills.{{index}}.name" value="{{skill.name}}" placeholder="Skill Name"/>
                        <div class="col-trained">
                            <input type="checkbox" name="system.customSkills.{{index}}.trained" {{#if skill.trained}}checked{{/if}}/>
                        </div>
                        <div class="col-bonus">{{#if (gte skill.bonus 0)}}+{{/if}}{{skill.bonus}}</div>
                        <button type="button" class="delete-custom-skill" data-index="{{index}}">×</button>
                    </div>
                    {{/each}}

                    <button type="button" class="add-custom-skill-btn holo-add">+ Add Skill</button>
                </div>
            </section>
        </div>

        {{!-- CENTER COLUMN --}}
        <div class="center-column">
            {{> "systems/swse/templates/partials/hp-vitals.hbs"}}
            {{> "systems/swse/templates/partials/condition.hbs"}}
            {{> "systems/swse/templates/partials/bottom-tabs.hbs"}}
        </div>

        {{!-- RIGHT COLUMN --}}
        <div class="right-column">
            {{> "systems/swse/templates/partials/combat.hbs"}}
            {{> "systems/swse/templates/partials/force.hbs"}}
            {{> "systems/swse/templates/partials/credits.hbs"}}
        </div>
    </div>
</form>
