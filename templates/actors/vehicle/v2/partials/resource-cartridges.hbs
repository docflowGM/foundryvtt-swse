<div class="swse-v2-resources">
  <div class="swse-v2-resource" data-kind="hp" title="Hit Points">
    <span class="label">HP</span>
    <div style="display:flex; gap:8px; align-items:center;">
      <span class="count">{{system.hp.value}}/{{system.hp.max}}</span>
    </div>
  </div>

  <div class="swse-v2-resource" data-kind="sr" title="Shield Rating">
    <span class="label">SR</span>
    <div style="display:flex; gap:8px; align-items:center;">
      <span class="count">{{system.shieldRating}}</span>
    </div>
  </div>

  <div class="swse-v2-resource" data-kind="dr" title="Damage Reduction">
    <span class="label">DR</span>
    <div style="display:flex; gap:8px; align-items:center;">
      <span class="count">{{system.damageReduction}}</span>
    </div>
  </div>

  <div class="swse-v2-resource" data-kind="speed" title="Max Velocity">
    <span class="label">Speed</span>
    <div style="display:flex; gap:8px; align-items:center;">
      <span class="count">{{system.maxVelocity}}</span>
    </div>
  </div>

  <div class="swse-v2-resource" data-kind="crew" title="Crew Capacity">
    <span class="label">Crew</span>
    <div style="display:flex; gap:8px; align-items:center;">
      <span class="count">{{system.crewCapacity}}</span>
    </div>
  </div>
</div>
