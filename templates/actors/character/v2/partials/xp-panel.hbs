{{#if xpEnabled}}
<section class="swse-xp-panel v3-panel holo-panel {{#if xpLevelReady}}xp-level-up{{/if}}">

  <header class="section-bar">
    <h3 class="section-header">Experience Points</h3>
  </header>

  <div class="xp-content">

    <div class="xp-grid-top">
      <div class="xp-stat">
        <div class="xp-label">Level</div>
        <div class="xp-level-value">{{xpData.level}}</div>
      </div>

      <div class="xp-stat">
        <div class="xp-label">Total XP</div>

        {{#if isGM}}
          <input type="number"
                 name="system.xp.total"
                 value="{{xpData.total}}"
                 min="0"
                 class="xp-total-input">
        {{else}}
          <div class="xp-total-value">{{xpData.total}}</div>
        {{/if}}

      </div>
    </div>

    {{#if xpData.nextLevelAt}}
    <div class="xp-grid-bottom">
      <div class="xp-substat">
        <div class="xp-sub-label">Next Level</div>
        <div class="xp-sub-value">{{xpData.nextLevelAt}}</div>
      </div>

      <div class="xp-substat">
        <div class="xp-sub-label">XP to Next</div>
        <div class="xp-sub-value">{{xpData.xpToNext}}</div>
      </div>
    </div>
    {{/if}}

    <div class="xp-progress-wrapper">
      {{#if xpData.nextLevelAt}}
        <div class="xp-progress-text">
          {{xpData.total}} / {{xpData.nextLevelAt}}
        </div>
      {{/if}}

      <div class="xp-progress-bar">
        <div class="xp-progress-fill"
             style="width: {{xpPercent}}%;"></div>
      </div>
    </div>

  </div>
</section>
{{/if}}