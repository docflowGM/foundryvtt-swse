{{!-- Weapon Item Card for Inventory Display --}}
<div class="inventory-weapon-card {{#if equipped}}is-equipped{{/if}}" data-item-id="{{id}}">

  {{!-- CARD HEADER: Name + Damage Type --}}
  <div class="card-header weapon-header">
    <div class="weapon-title-section">
      <div class="weapon-name">{{name}}</div>
      <div class="weapon-type-badge">{{system.meleeOrRanged}}</div>
    </div>
    {{#if equipped}}
      <span class="equipped-badge" title="Equipped">⚔</span>
    {{/if}}
  </div>

  {{!-- CARD BODY: Damage + Stats --}}
  <div class="card-body weapon-body">

    {{!-- Damage Row with Tooltip --}}
    <div class="damage-stat" data-weapon-id="{{id}}" data-damage-breakdown title="Hover or click for damage breakdown">
      <span class="stat-label">Damage</span>
      <span class="damage-value">{{system.damageDice}}{{system.damageDiceType}}</span>
      {{#if system.damageBonus}}
        <span class="damage-bonus {{#if system.damageBonus}}positive{{/if}}">
          {{#if system.damageBonus}}+{{system.damageBonus}}{{/if}}
        </span>
      {{/if}}
      <span class="damage-type-label">({{system.damageType}})</span>
    </div>

    {{!-- Range/Ammo Row --}}
    {{#if system.ammunition}}
      <div class="ammo-stat">
        <span class="stat-label">Ammo</span>
        <div class="ammo-display">
          <span class="ammo-value">{{system.ammunition.current}}/{{system.ammunition.max}}</span>
          {{#if system.ammunition.type}}
            <span class="ammo-type">({{system.ammunition.type}})</span>
          {{/if}}
        </div>
        {{#if system.ammunition.max}}
          <div class="ammo-bar">
            <div class="ammo-fill" style="width: {{ammoPercentage}}%"></div>
          </div>
        {{/if}}
      </div>
    {{/if}}

    {{#if system.range}}
      <div class="stat-row meta-stats">
        <div class="meta-stat">
          <span class="stat-label">Range</span>
          <span class="stat-value">{{system.range}}</span>
        </div>
        {{#if system.criticalMultiplier}}
          <div class="meta-stat">
            <span class="stat-label">Crit</span>
            <span class="stat-value">{{system.criticalMultiplier}}</span>
          </div>
        {{/if}}
      </div>
    {{/if}}

    {{!-- Properties --}}
    {{#if system.properties}}
      <div class="weapon-properties">
        {{#each system.properties}}
          <span class="property-tag">{{this}}</span>
        {{/each}}
      </div>
    {{/if}}

  </div>

  {{!-- CARD FOOTER: Actions --}}
  <div class="card-footer weapon-footer">
    <button class="btn btn-equip" title="Equip/Unequip" data-action="equip">
      {{#if equipped}}Unequip{{else}}Equip{{/if}}
    </button>
    <button class="btn btn-config" title="Configure Weapon Properties" data-action="configure">⚙</button>
    <button class="btn btn-edit" title="Edit Item" data-action="edit">Edit</button>
    <button class="btn btn-delete" title="Remove Item" data-action="delete">Delete</button>
  </div>

</div>

