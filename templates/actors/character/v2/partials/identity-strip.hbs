<div class="holo-panel">
  <div class="section-bar">
    <h3 class="section-header">Identity</h3>
  </div>

  <div class="swse-v2-identity-grid">
    <div class="field"><span class="label">Class</span><button type="button" data-action="select-class" class="swse-link">{{derived.identity.className}}</button></div>
    <div class="field"><span class="label">Level</span><div style="display:flex; gap:8px; align-items:center;"><span class="value">{{derived.identity.level}}</span><button type="button" data-action="level-up" class="swse-btn">Level Up</button></div></div>
    <div class="field"><span class="label">Species</span><button type="button" data-action="select-species" class="swse-link">{{derived.identity.species}}</button></div>
    <div class="field"><span class="label">Gender</span><input type="text" name="system.gender" value="{{system.gender}}" {{#unless editable}}disabled{{/unless}} /></div>
    <div class="field"><span class="label">Background</span><button type="button" data-action="select-background" class="swse-link">{{derived.identity.background}}</button></div>
    <div class="field"><span class="label">Destiny</span><span class="value">{{derived.identity.destinyType}}</span></div>
    <div class="field"><span class="label">Size</span><span class="value">{{derived.identity.size}}</span></div>
    <div class="field"><span class="label">Speed</span><span class="value">{{derived.identity.speed}}</span></div>
  </div>

  <div class="swse-v2-resources" style="margin-top:8px;">
    <div class="swse-v2-resource" data-kind="destiny" title="Destiny Points">
      <span class="label">DP</span>
      <input type="number" name="system.destinyPoints.value" value="{{system.destinyPoints.value}}" style="width:60px;" {{#unless editable}}disabled{{/unless}} />
    </div>

    <div class="swse-v2-resource" data-kind="force" title="Force Points">
      <span class="label">FP</span>
      <input type="number" name="system.forcePoints.value" value="{{system.forcePoints.value}}" style="width:60px;" {{#unless editable}}disabled{{/unless}} />
    </div>
  </div>
</div>
