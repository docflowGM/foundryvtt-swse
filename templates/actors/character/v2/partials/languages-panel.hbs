<div class="holo-panel">
  <div class="section-bar">
    <h3 class="section-header">Languages</h3>
    <button type="button" data-action="add-language" class="swse-btn" style="padding: 4px 8px; font-size: 0.85em;">+ Add Language</button>
  </div>

  <div class="swse-v2-languages-list">
    {{#if system.languages.length}}
      <div class="language-items">
        {{#each system.languages as |lang index|}}
          <div class="language-item" style="display: flex; justify-content: space-between; align-items: center; padding: 8px; border-bottom: 1px solid #eee;">
            <input type="text"
                   name="system.languages.{{index}}"
                   value="{{lang}}"
                   placeholder="Language name"
                   style="flex: 1; padding: 4px; border: 1px solid #ccc; border-radius: 2px;">
            <button type="button"
                    class="language-remove"
                    data-action="remove-language"
                    data-index="{{index}}"
                    style="background: #cc0000; color: white; border: none; padding: 4px 8px; border-radius: 2px; cursor: pointer; margin-left: 8px;">
              Remove
            </button>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="muted" style="padding: 16px;">No languages known. Click "Add Language" to add one.</div>
    {{/if}}
  </div>
</div>
