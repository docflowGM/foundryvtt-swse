<section class="swse-languages-panel v3-panel holo-panel">

  <header class="section-bar">
    <h3 class="section-header">Languages</h3>
    <button type="button"
            data-action="add-language"
            class="swse-btn language-add">
      + Add Language
    </button>
  </header>

  <div class="swse-v3-languages-list">

    {{#if system.languages.length}}

      <div class="language-grid">

        {{#each system.languages as |lang index|}}
          <div class="language-card" data-index="{{index}}">

            <div class="language-input-wrapper">
              <input type="text"
                     name="system.languages.{{index}}"
                     value="{{lang}}"
                     placeholder="Enter language..."
                     class="language-input" />
            </div>

            <button type="button"
                    class="language-remove"
                    data-action="remove-language"
                    data-index="{{index}}">
              âœ•
            </button>

          </div>
        {{/each}}

      </div>

    {{else}}

      <div class="languages-empty">
        <div class="empty-icon">ğŸŒ</div>
        <div>No languages known</div>
        <div class="empty-subtext">Click â€œAdd Languageâ€ to begin</div>
      </div>

    {{/if}}

  </div>
</section>