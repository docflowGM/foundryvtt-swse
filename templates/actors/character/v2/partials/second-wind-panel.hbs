<section class="swse-second-wind-panel v3-panel holo-panel">

  <header class="section-bar">
    <h3 class="section-header">Second Wind</h3>
  </header>

  <div class="sw-content">

    <!-- Healing Amount -->
    <div class="sw-healing-display">
      <span class="sw-healing-label">Healing</span>
      <span class="sw-healing-value">
        {{system.secondWind.healing}} HP
      </span>
    </div>

    <!-- Uses Tracker -->
    <div class="sw-uses-tracker">
      {{#each (range 0 system.secondWind.max) as |i|}}
        <div class="sw-charge
          {{#if (lt i ../system.secondWind.uses)}}active{{/if}}">
        </div>
      {{/each}}
    </div>

    <!-- Primary Action -->
    <div class="sw-actions">

      {{#if (gt system.secondWind.uses 0)}}
        <button type="button"
                class="sw-recover-btn"
                data-action="use-second-wind">
          Regain {{system.secondWind.healing}} HP
        </button>
      {{else}}
        <button type="button"
                class="sw-recover-btn disabled"
                disabled>
          No Uses Remaining
        </button>
      {{/if}}

      <button type="button"
              class="sw-rest-btn"
              data-action="rest-second-wind">
        Reset Uses
      </button>

    </div>

  </div>
</section>