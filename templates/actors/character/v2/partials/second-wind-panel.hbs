<div class="holo-panel">
  <div class="section-bar">
    <h3 class="section-header">Second Wind</h3>
  </div>

  <div class="swse-v2-second-wind">
    <div class="swse-v2-sw-info">
      <div class="sw-stat">
        <span class="label">Healing</span>
        <span class="value">{{system.secondWind.healing}} HP</span>
      </div>
      <div class="sw-stat">
        <span class="label">Uses Remaining</span>
        <span class="value">{{system.secondWind.uses}} / {{system.secondWind.max}}</span>
      </div>
    </div>

    <div class="swse-v2-sw-actions">
      {{#if (gt system.secondWind.uses 0)}}
        <button type="button" class="swse-v2-sw-recover" data-action="use-second-wind">
          Recover {{system.secondWind.healing}} HP
        </button>
      {{else}}
        <button type="button" class="swse-v2-sw-recover" disabled>
          No Uses Remaining
        </button>
      {{/if}}

      <button type="button" class="swse-v2-sw-rest" data-action="rest-second-wind">
        Rest (Reset Uses)
      </button>
    </div>
  </div>
</div>
