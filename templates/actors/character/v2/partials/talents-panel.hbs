<div class="holo-panel">
  <div class="section-bar">
    <h3 class="section-header">Talents</h3>
    <button type="button" data-action="add-talent" class="swse-btn" style="padding: 4px 8px; font-size: 0.85em;">+ Add Talent</button>
  </div>

  {{#if derived.talents.groups.length}}
    <div class="talents-by-tree">
      {{#each derived.talents.groups as |treeGroup|}}
        <div class="talent-tree-group" style="margin-bottom: 12px;">
          <div class="talent-tree-label" style="font-size: 0.75rem; text-transform: uppercase; opacity: 0.6; margin-bottom: 6px; font-weight: bold;">
            {{treeGroup.label}} ({{treeGroup.count}})
          </div>
          <div class="talent-cards" style="display: flex; flex-wrap: wrap; gap: 8px;">
            {{#each treeGroup.items as |talent|}}
              <div class="talent-card"
                   data-item-id="{{talent.id}}"
                   data-toggle="expand"
                   style="width: 200px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; padding: 8px; cursor: pointer; transition: all 0.2s; min-height: 40px;">

                <div class="talent-card-header" style="font-weight: bold; margin-bottom: 4px; word-break: break-word;">
                  {{talent.name}}
                </div>

                <div class="talent-card-meta" style="font-size: 0.7rem; opacity: 0.7; margin-bottom: 4px;">
                  {{#if talent.sourceClass}}
                    Class: {{talent.sourceClass}}
                  {{/if}}
                </div>

                <div class="talent-card-preview" style="font-size: 0.75rem; opacity: 0.85; line-height: 1.3;">
                  {{talent.summary}}
                </div>

                <div class="talent-card-actions" style="margin-top: 6px; display: flex; gap: 4px; opacity: 0;">
                  <button type="button" class="delete-talent" data-action="delete-talent" data-item-id="{{talent.id}}" style="flex: 1; padding: 3px 4px; font-size: 0.7em; background: #cc0000; color: white; border: none; border-radius: 3px; cursor: pointer;">
                    Delete
                  </button>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="muted" style="padding:6px 0;">No talents.</div>
  {{/if}}
</div>
