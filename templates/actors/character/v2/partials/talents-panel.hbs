<div class="holo-panel">
  <div class="section-bar">
    <h3 class="section-header">Talents</h3>
    <button type="button" data-action="add-talent" class="swse-btn" style="padding: 4px 8px; font-size: 0.85em;">+ Add Talent</button>
  </div>

  {{#if derived.talents.groups.length}}
    <div class="swse-v2-groups">
      {{#each derived.talents.groups}}
        <div class="swse-v2-group">
          <div class="swse-v2-group-header">
            <span class="name">{{this.label}}</span>
            <span class="meta">{{this.count}}</span>
          </div>

          <div class="swse-v2-group-list">
            {{#each this.items}}
              <div class="swse-v2-entry swse-v2-open-item" data-item-id="{{this.id}}" title="Click to open item">
                <div class="row">
                  <span class="name">{{this.name}}</span>
                  {{#if this.sourceClass}}
                    <span class="tag">{{this.sourceClass}}</span>
                  {{/if}}
                </div>
                {{#if this.summary}}
                  <div class="muted">{{this.summary}}</div>
                {{/if}}
              </div>
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="muted" style="padding:6px 0;">No talents.</div>
  {{/if}}
</div>
