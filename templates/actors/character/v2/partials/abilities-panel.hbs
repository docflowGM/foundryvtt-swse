<div class="holo-panel">
  <div class="section-bar">
    <h3 class="section-header">Abilities</h3>
  </div>

  <div class="swse-v2-abilities-grid">
    <!-- STR -->
    {{#with system.abilities.str as |ability|}}
    <div class="ability-row">
      <div class="ability-label">STR</div>
      <div class="ability-score">
        <input type="number" name="system.abilities.str.value" value="{{ability.value}}" {{#unless editable}}disabled{{/unless}} />
      </div>
      <div class="ability-mod">{{numberFormat (safeNumber ability.mod 0) decimals=0 sign=true}}</div>
    </div>
    {{/with}}

