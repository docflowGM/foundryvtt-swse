<div class="holo-panel">
  <div class="section-bar">
    <h3 class="section-header">Abilities</h3>
  </div>

  <div class="swse-v2-abilities-grid">
    <!-- STR -->
    {{#with system.attributes.str as |ability|}}
    <div class="ability-row-full">
      <div class="ability-label">STR</div>
      <div class="ability-components flexrow">
        <div class="component">
          <label class="label-xs">Base</label>
          <input type="number" class="input-sm" name="system.attributes.str.base" value="{{ability.base}}" {{#unless editable}}disabled{{/unless}} />
        </div>
        <div class="component">
          <label class="label-xs">Racial</label>
          <input type="number" class="input-sm" name="system.attributes.str.racial" value="{{ability.racial}}" {{#unless editable}}disabled{{/unless}} />
        </div>
        <div class="component">
          <label class="label-xs">Enh</label>
          <input type="number" class="input-sm" name="system.attributes.str.enhancement" value="{{ability.enhancement}}" {{#unless editable}}disabled{{/unless}} />
        </div>
        <div class="component">
          <label class="label-xs">Temp</label>
          <input type="number" class="input-sm" name="system.attributes.str.temp" value="{{ability.temp}}" {{#unless editable}}disabled{{/unless}} />
        </div>
        <div class="component read-only">
          <label class="label-xs">Total</label>
          <span class="value-sm">{{ability.total}}</span>
        </div>
        <div class="component read-only">
          <label class="label-xs">Mod</label>
          <span class="value-mod">{{numberFormat (safeNumber ability.mod 0) decimals=0 sign=true}}</span>
        </div>
      </div>
    </div>
    {{/with}}

