
<section class="abilities-panel v3-panel holo-panel">

  <header class="section-bar">
    <h3 class="section-header">Abilities</h3>
    <button type="button"
            data-action="toggle-abilities"
            class="swse-btn">
      Toggle View
    </button>
  </header>

  <div class="abilities-container">

    {{#each abilities as |ability|}}

      <div class="ability-row ability-{{ability.key}}">

        <!-- COLLAPSED VIEW -->
        <div class="ability-collapsed">

          <div class="ability-label">
            {{ability.label}}
          </div>

          <div class="ability-total">
            {{ability.total}}
          </div>

          <div class="ability-mod">
            {{numberFormat ability.mod decimals=0 sign=true}}
          </div>

        </div>

        
        <!-- EXPANDED VIEW -->
        <div class="ability-expanded">

          <div class="math-pill compact">
            <input type="number"
                   data-field="base"
                   name="system.abilities.{{ability.key}}.base"
                   value="{{ability.total}}">
          </div>

          <div class="math-operator">+</div>

          <div class="math-pill compact">
            <input type="number"
                   data-field="misc"
                   name="system.abilities.{{ability.key}}.misc"
                   value="0">
          </div>

          <div class="math-operator">=</div>

          <div class="math-result">
            {{ability.total}}
          </div>

          <div class="math-mod">
            {{numberFormat ability.mod decimals=0 sign=true}}
          </div>

        </div>

      </div>

      </div>

    {{/each}}

  </div>

</section>
