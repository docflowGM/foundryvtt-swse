{{!-- Defense Breakdown Tooltip showing all modifiers affecting defense --}}
<div class="defense-breakdown-tooltip {{defenseKey}}-breakdown" data-defense="{{defenseKey}}">

  <div class="tooltip-header">
    <h4>{{defenseLabel}} Defense Breakdown</h4>
    <span class="total-value">Total: {{totalValue}}</span>
  </div>

  {{!-- BASE CALCULATION --}}
  <div class="breakdown-section base-calculation">
    <h5 class="section-title">Base Calculation</h5>
    <div class="calc-item">
      <span class="item-source">Base</span>
      <span class="item-value">10</span>
    </div>
    {{#if halfLevel}}
      <div class="calc-item">
        <span class="item-source">Â½ Level</span>
        <span class="item-value">+{{halfLevel}}</span>
      </div>
    {{/if}}
    {{#if abilityMod}}
      <div class="calc-item">
        <span class="item-source">Ability Mod</span>
        <span class="item-value">{{#if abilityMod}}+{{/if}}{{abilityMod}}</span>
      </div>
    {{/if}}
    {{#if classBonus}}
      <div class="calc-item">
        <span class="item-source">Class Bonus</span>
        <span class="item-value">+{{classBonus}}</span>
      </div>
    {{/if}}
    {{#if miscMod}}
      <div class="calc-item">
        <span class="item-source">Miscellaneous</span>
        <span class="item-value">{{#if miscMod}}+{{/if}}{{miscMod}}</span>
      </div>
    {{/if}}
    <div class="calc-divider"></div>
    <div class="calc-item total">
      <span class="item-source">Subtotal</span>
      <span class="item-value">{{subtotal}}</span>
    </div>
  </div>

  {{!-- MODIFIERS FROM EQUIPMENT & CONDITIONS --}}
  {{#if modifiers}}
    <div class="breakdown-section modifier-breakdown">
      <h5 class="section-title">Active Modifiers ({{modifiers.length}})</h5>

      {{#each modifiers as |mod|}}
        <div class="modifier-item {{mod.source}} {{mod.type}}">
          <span class="modifier-source" title="{{mod.sourceName}}">
            {{mod.sourceName}}
          </span>
          <span class="modifier-value {{#if mod.value}}positive{{else}}neutral{{/if}}">
            {{#if mod.value}}+{{/if}}{{mod.value}}
          </span>
          {{#if mod.description}}
            <span class="modifier-description">{{mod.description}}</span>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/if}}

  {{!-- SPECIAL EFFECTS --}}
  {{#if specialEffects}}
    <div class="breakdown-section special-effects">
      <h5 class="section-title">Special Effects</h5>
      {{#each specialEffects as |effect|}}
        <div class="effect-item {{effect.type}}">
          <span class="effect-name">{{effect.name}}</span>
          {{#if effect.description}}
            <span class="effect-description">{{effect.description}}</span>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/if}}

  {{!-- FINAL TOTAL --}}
  <div class="breakdown-section final-total">
    <div class="total-calculation">
      <span class="label">Final Defense Value:</span>
      <span class="value">{{totalValue}}</span>
    </div>
  </div>

</div>

