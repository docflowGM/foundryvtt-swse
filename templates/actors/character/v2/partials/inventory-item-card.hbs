{{!-- Generic Inventory Item Card --}}
<div class="inventory-item-card" data-item-id="{{id}}">

  {{!-- CARD HEADER: Name + Type --}}
  <div class="card-header item-header">
    <div class="item-title-section">
      <div class="item-name">{{name}}</div>
      {{#if type}}
        <div class="item-type-badge">{{type}}</div>
      {{/if}}
    </div>
    {{#if quantity}}
      <div class="item-quantity">x{{quantity}}</div>
    {{/if}}
  </div>

  {{!-- CARD BODY: Details --}}
  <div class="card-body item-body">
    {{#if description}}
      <div class="item-description">
        {{description}}
      </div>
    {{/if}}

    {{!-- Weight & Cost --}}
    <div class="item-meta">
      {{#if weight}}
        <span class="meta-item">âš– {{weight}} lbs</span>
      {{/if}}
      {{#if cost}}
        <span class="meta-item">ðŸ’° {{cost}} cr</span>
      {{/if}}
    </div>
  </div>

  {{!-- CARD FOOTER: Actions --}}
  <div class="card-footer item-footer">
    <button class="btn btn-edit" title="Edit Item">Edit</button>
    <button class="btn btn-delete" title="Remove Item">Delete</button>
  </div>

</div>

<style>
.inventory-item-card {
  display: flex;
  flex-direction: column;
  border: 1px solid #444;
  border-radius: 4px;
  background: linear-gradient(135deg, #1a1a1a 0%, #0d0d0d 100%);
  overflow: hidden;
  transition: all 0.2s ease;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  background: rgba(100, 100, 100, 0.1);
  border-bottom: 1px solid #333;
}

.item-title-section {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
}

.item-name {
  font-weight: bold;
  color: #fff;
  font-size: 14px;
}

.item-type-badge {
  font-size: 11px;
  color: #aaa;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.item-quantity {
  font-size: 12px;
  color: #aaa;
  margin-left: 8px;
}

.item-body {
  padding: 10px 12px;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.item-description {
  font-size: 12px;
  color: #ccc;
  line-height: 1.4;
  max-height: 60px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  padding: 6px 0;
  border-top: 1px solid #333;
  font-size: 11px;
  color: #aaa;
}

.meta-item {
  padding: 2px 6px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 2px;
}

.item-footer {
  display: flex;
  gap: 4px;
  padding: 6px 8px;
  border-top: 1px solid #333;
  background: rgba(0, 0, 0, 0.5);
}

.btn {
  flex: 1;
  padding: 4px 8px;
  font-size: 11px;
  border: 1px solid #555;
  border-radius: 3px;
  background: #222;
  color: #ccc;
