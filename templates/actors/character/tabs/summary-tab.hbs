{{!-- Summary Tab: Combat Dashboard --}}
<div class="tab summary-tab active" data-group="primary" data-tab="summary">
 
 <section class="combat-stats">
 <h3 class="section-header">Combat Statistics</h3>
 
 <div class="combat-grid grid grid-2col">
 {{!-- Left Column --}}
 <div class="combat-column">
 <div class="stat-block initiative">
 <label>Initiative</label>
 <div class="stat-value rollable" 
 data-roll="1d20+@initiative" 
 data-label="Initiative">
 {{numberFormat (safeNumber system.initiative) sign=true}}
 </div>
 </div>
 
 <div class="stat-block speed">
 <label>Speed</label>
 <div class="stat-value">
 {{system.speed}} squares
 {{#if (lt system.conditionTrack.current 4)}}
 <span class="speed-normal"></span>
 {{else}}
 <span class="speed-reduced">(Half: {{divide system.speed 2}})</span>
 {{/if}}
 </div>
 </div>
 
 <div class="stat-block base-attack">
 <label>Base Attack Bonus</label>
 <div class="stat-value">
 {{numberFormat (safeNumber system.baseAttack) sign=true}}
 </div>
 </div>
 
 <div class="stat-block damage-threshold">
 <label>Damage Threshold</label>
 <div class="stat-value" title="Equal to Fortitude Defense">
 {{system.defenses.fortitude.total}}
 </div>
 </div>
 </div>
 
 {{!-- Right Column --}}
 <div class="combat-column">
 {{!-- Quick Attacks --}}
 <div class="quick-attacks">
 <h4>Common Attacks</h4>
 <div class="attacks-list">
 {{#each weapons as |weapon|}}
 {{#if weapon.system.equipped}}
 <div class="attack-item flexrow">
 <img src="{{weapon.img}}" width="24" height="24" alt="{{weapon.name}}"/>
 <span class="attack-name rollable" 
 data-roll="1d20+@baseAttack+@abilities.{{weapon.system.attackAbility}}.mod"
 data-label="{{weapon.name}} Attack">
 {{weapon.name}}
 </span>
 <span class="attack-bonus">
 {{numberFormat (safeNumber weapon.system.attackBonus) sign=true}}
 </span>
 <span class="attack-damage rollable"
 data-roll="{{weapon.system.damage}}"
 data-label="{{weapon.name}} Damage">
 {{weapon.system.damage}}
 </span>
 </div>
 {{/if}}
 {{/each}}
 </div>
 </div>
 </div>
 </div>
 </section>

 {{!-- Character Traits --}}
 <section class="character-traits">
 <h3 class="section-header">Character Traits</h3>
 <div class="traits-grid">
 {{#unless system.isDroid}}
 <div class="trait-toggle">
 <label class="checkbox-label">
 <input type="checkbox"
 name="system.forceSensitive"
 {{checked system.forceSensitive}}
 title="Force Sensitive characters can access the Force tab and Use the Force skill"/>
 <i class="fas fa-hand-sparkles"></i>
 <span>Force Sensitive</span>
 </label>
 </div>
 {{/unless}}
 </div>
 </section>

 {{!-- Racial/Species Traits --}}
 {{#unless system.isDroid}}
 <section class="racial-traits">
 <h3 class="section-header">
 <i class="fas fa-dna"></i> Species
 {{#if system.race}}
 : {{system.race}}
 {{#if system.speciesSource}}
 <span class="source-tag">({{system.speciesSource}})</span>
 {{/if}}
 {{/if}}
 <button class="pick-species-btn" data-action="pickSpecies" title="{{#if system.race}}Change species{{else}}Select a species{{/if}}" type="button">
 <i class="fas fa-{{#if system.race}}exchange-alt{{else}}plus{{/if}}"></i>
 {{#if system.race}}Change Species{{else}}Pick a Species{{/if}}
 </button>
 </h3>

 {{#if system.race}}

 <div class="racial-traits-grid">
 {{!-- Size Information --}}
 {{#if system.size}}
 <div class="trait-category size-category">
 <h4><i class="fas fa-ruler-combined"></i> Size</h4>
 <div class="trait-item">
 <strong>{{system.size}}</strong>
 {{#if (eq system.size "Small")}}
 <span class="size-modifier">+1 Reflex Defense, +5 Stealth</span>
 {{else if (eq system.size "Large")}}
 <span class="size-modifier">-1 Reflex Defense, -5 Stealth</span>
 {{/if}}
 </div>
 </div>
 {{/if}}

 {{!-- Vision Traits --}}
 {{#if system.visionTraits}}
 {{#if (gt system.visionTraits.length 0)}}
 <div class="trait-category vision-category">
 <h4><i class="fas fa-eye"></i> Vision & Senses</h4>
 {{#each system.visionTraits as |trait|}}
 <div class="trait-item">{{trait}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{!-- Natural Weapons --}}
 {{#if system.naturalWeapons}}
 {{#if (gt system.naturalWeapons.length 0)}}
 <div class="trait-category weapons-category">
 <h4><i class="fas fa-paw"></i> Natural Weapons</h4>
 {{#each system.naturalWeapons as |weapon|}}
 <div class="trait-item">
 <strong>{{weapon.name}}:</strong> {{weapon.damage}} {{weapon.type}}
 </div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{!-- Movement Traits --}}
 {{#if system.movementTraits}}
 {{#if (gt system.movementTraits.length 0)}}
 <div class="trait-category movement-category">
 <h4><i class="fas fa-running"></i> Movement</h4>
 {{#each system.movementTraits as |trait|}}
 <div class="trait-item">{{trait}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{!-- Skill Bonuses --}}
 {{#if system.racialSkillBonuses}}
 {{#if (gt system.racialSkillBonuses.length 0)}}
 <div class="trait-category skills-category">
 <h4><i class="fas fa-graduation-cap"></i> Skill Bonuses</h4>
 {{#each system.racialSkillBonuses as |bonus|}}
 <div class="trait-item">{{bonus}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{!-- Special Abilities --}}
 {{#if system.specialAbilities}}
 {{#if (gt system.specialAbilities.length 0)}}
 <div class="trait-category special-category">
 <h4><i class="fas fa-star"></i> Special Abilities</h4>
 {{#each system.specialAbilities as |ability|}}
 <div class="trait-item">{{ability}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{!-- Combat Traits --}}
 {{#if system.combatTraits}}
 {{#if (or (gt system.combatTraits.naturalArmor 0) (gt system.combatTraits.otherTraits.length 0))}}
 <div class="trait-category combat-category">
 <h4><i class="fas fa-shield-alt"></i> Combat Traits</h4>
 {{#if (gt system.combatTraits.naturalArmor 0)}}
 <div class="trait-item">Natural Armor: +{{system.combatTraits.naturalArmor}}</div>
 {{/if}}
 {{#each system.combatTraits.otherTraits as |trait|}}
 <div class="trait-item">{{trait}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{!-- Environmental & Social Traits --}}
 {{#if system.environmentalTraits}}
 {{#if (gt system.environmentalTraits.length 0)}}
 <div class="trait-category environmental-category">
 <h4><i class="fas fa-temperature-high"></i> Environmental</h4>
 {{#each system.environmentalTraits as |trait|}}
 <div class="trait-item">{{trait}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{#if system.socialTraits}}
 {{#if (gt system.socialTraits.length 0)}}
 <div class="trait-category social-category">
 <h4><i class="fas fa-comments"></i> Social</h4>
 {{#each system.socialTraits as |trait|}}
 <div class="trait-item">{{trait}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{!-- Tech & Force Traits --}}
 {{#if system.techTraits}}
 {{#if (gt system.techTraits.length 0)}}
 <div class="trait-category tech-category">
 <h4><i class="fas fa-microchip"></i> Technology</h4>
 {{#each system.techTraits as |trait|}}
 <div class="trait-item">{{trait}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}

 {{#if system.forceTraits}}
 {{#if (gt system.forceTraits.length 0)}}
 <div class="trait-category force-category">
 <h4><i class="fas fa-hand-sparkles"></i> Force</h4>
 {{#each system.forceTraits as |trait|}}
 <div class="trait-item">{{trait}}</div>
 {{/each}}
 </div>
 {{/if}}
 {{/if}}
 </div>
 {{else}}
 <p class="hint-text">
 <i class="fas fa-info-circle"></i>
 Click "Pick a Species" above to select your character's species and gain racial bonuses.
 </p>
 {{/if}}
 </section>
 {{/unless}}

 {{!-- Droid Immunities --}}
 {{#if system.isDroid}}
 <section class="droid-immunities">
 <h3 class="section-header">Droid Traits & Immunities</h3>
 <div class="immunities-grid">
 <div class="trait-item">
 <i class="fas fa-shield-alt"></i>
 <span><strong>Immune:</strong> Poison, Disease, Radiation</span>
 </div>
 <div class="trait-item">
 <i class="fas fa-wind"></i>
 <span><strong>Immune:</strong> Atmospheric Hazards, Vacuum</span>
 </div>
 <div class="trait-item">
 <i class="fas fa-brain"></i>
 <span><strong>Immune:</strong> Mind-Affecting Effects</span>
 </div>
 <div class="trait-item">
 <i class="fas fa-bolt"></i>
 <span><strong>Vulnerable:</strong> Ion Damage (treated as stun)</span>
 </div>
 <div class="trait-item">
 <i class="fas fa-wrench"></i>
 <span><strong>Repair Only:</strong> Mechanics skill required for healing</span>
 </div>
 <div class="trait-item">
 <i class="fas fa-heartbeat"></i>
 <span><strong>No CON Score:</strong> Fortitude uses STR modifier</span>
 </div>
 {{#if (ne system.droidDegree "4th-degree")}}
 <div class="trait-item">
 <i class="fas fa-user-shield"></i>
 <span><strong>Inhibitors:</strong> Cannot harm sentient beings</span>
 </div>
 {{/if}}
 </div>
 </section>
 {{/if}}

 {{!-- Ability Scores Quick Reference --}}
 <section class="abilities-quick">
 <h3 class="section-header">Ability Scores</h3>
 <div class="abilities-row flexrow">
 {{#each system.abilities as |ability key|}}
 <div class="ability-quick flex0">
 <label class="rollable" 
 data-roll="1d20+@abilities.{{key}}.mod"
 data-label="{{ability.label}}">
 {{ability.label}}
 </label>
 <div class="ability-score">{{ability.value}}</div>
 <div class="ability-mod rollable"
 data-roll="1d20+{{safeNumber ability.mod}}">
 {{numberFormat (safeNumber ability.mod) decimals=0 sign=true}}
 </div>
 </div>
 {{/each}}
 </div>
 </section>
 
 {{!-- Trained Skills Quick Access --}}
 <section class="skills-quick">
 <h3 class="section-header">Trained Skills</h3>
 <div class="trained-skills-list">
 {{#each system.skills as |skill key|}}
 {{#if skill.trained}}
 <div class="skill-quick flexrow">
 <span class="skill-name rollable"
 data-roll="1d20+@skills.{{key}}.mod"
 data-label="{{skill.label}}">
 {{skill.label}}
 </span>
 <span class="skill-mod">
 {{numberFormat (safeNumber skill.mod) sign=true}}
 </span>
 {{#if skill.focus}}
 <i class="fas fa-star skill-focus-icon" title="Skill Focus"></i>
 {{/if}}
 </div>
 {{/if}}
 {{/each}}
 </div>
 </section>
 
</div>
