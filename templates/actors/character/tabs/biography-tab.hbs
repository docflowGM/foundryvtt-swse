<div class="tab biography-tab swse-bio-tab" data-group="primary" data-tab="biography">

  <!-- ===================================================== -->
  <!-- PROFILE HEADER STRIP                                  -->
  <!-- ===================================================== -->

  <section class="swse-bio-header">

    <div class="bio-identity">
      <div class="bio-nameplate">
        <span class="bio-name">{{actor.name}}</span>
        <span class="bio-level">Level {{system.level}}</span>
      </div>
    </div>

    <div class="bio-summary-grid">

      <div class="bio-field">
        <label>Species</label>
        <input type="text" name="system.race" value="{{system.race}}" />
      </div>

      <div class="bio-field">
        <label>Class</label>
        <input type="text" name="system.class" value="{{system.class}}" />
      </div>

      <div class="bio-field">
        <label>Size</label>
        <select name="system.size">
          <option value="Small" {{#if (eq system.size "Small")}}selected{{/if}}>Small</option>
          <option value="Medium" {{#if (eq system.size "Medium")}}selected{{/if}}>Medium</option>
          <option value="Large" {{#if (eq system.size "Large")}}selected{{/if}}>Large</option>
        </select>
      </div>

      <div class="bio-field">
        <label>Homeworld</label>
        <input type="text" name="system.planetOfOrigin" value="{{system.planetOfOrigin}}" />
      </div>

      <div class="bio-field">
        <label>Background Event</label>
        <input type="text" name="system.event" value="{{system.event}}" />
      </div>

      <div class="bio-field">
        <label>Profession</label>
        <input type="text" name="system.profession" value="{{system.profession}}" />
      </div>

    </div>
  </section>


  <!-- ===================================================== -->
  <!-- DARK SIDE STATUS PANEL                                -->
  <!-- ===================================================== -->

  <section class="swse-bio-darkside">

    <div class="darkside-header">
      <span>Dark Side Corruption</span>
      <span class="darkside-score">
        {{system.darkSideScore}} / {{darkSideMax}}
      </span>
    </div>

    <div class="darkside-bar">
      {{#each darkSideSegments}}
        <div
          class="darkside-segment {{#if this.filled}}filled{{/if}}"
          data-segment="{{this.index}}"
          style="background-color: {{this.color}};"
        ></div>
      {{/each}}
    </div>

    <div class="darkside-state">
      {{#if (gte system.darkSideScore darkSideMax)}}
        Fully Corrupted
      {{else if (gte system.darkSideScore (mult darkSideMax 0.75))}}
        Heavily Corrupted
      {{else if (gte system.darkSideScore (mult darkSideMax 0.5))}}
        Moderately Corrupted
      {{else if (gt system.darkSideScore 0)}}
        Touched by the Dark Side
      {{else}}
        Pure in the Force
      {{/if}}
    </div>

  </section>


  <!-- ===================================================== -->
  <!-- DESTINY PANEL                                         -->
  <!-- ===================================================== -->

  <section class="swse-bio-destiny">

    <div class="destiny-header">
      <span>Destiny</span>
      {{#if system.destiny.fulfilled}}
        <span class="destiny-status fulfilled">Fulfilled</span>
      {{else}}
        <span class="destiny-status active">Active</span>
      {{/if}}
    </div>

    <div class="destiny-grid">

      <div class="destiny-field">
        <label>Type</label>
        <input type="text" name="system.destiny.type" value="{{system.destiny.type}}" />
      </div>

      <div class="destiny-field checkbox">
        <label>
          <input type="checkbox" name="system.destiny.secret" {{checked system.destiny.secret}} />
          Secret Destiny
        </label>
      </div>

    </div>

  </section>


  <!-- ===================================================== -->
  <!-- BIOGRAPHY LOG                                         -->
  <!-- ===================================================== -->

  <section class="swse-bio-log">
    <h3 class="section-header">Biography Log</h3>
    <div class="editor-content">
      {{editor enrichedBiography target="system.biography" button=true owner=owner editable=editable}}
    </div>
  </section>


  <!-- ===================================================== -->
  <!-- GM NOTES                                              -->
  <!-- ===================================================== -->

  <section class="swse-bio-notes">
    <h3 class="section-header">Operational Notes</h3>
    <div class="editor-content">
      {{editor enrichedNotes target="system.notes" button=true owner=owner editable=editable}}
    </div>
  </section>

</div>