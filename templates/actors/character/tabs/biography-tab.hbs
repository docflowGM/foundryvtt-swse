<div class="tab biography-tab" data-group="primary" data-tab="biography">
 <h3 class="section-header">Character Details</h3>

 <div class="details-grid">
 <div class="detail-field">
 <label>Species</label>
 <input type="text" name="system.race" value="{{system.race}}" placeholder="Human"/>
 </div>

 <div class="detail-field">
 <label>Class</label>
 <input type="text" name="system.class" value="{{system.class}}" placeholder="Jedi"/>
 </div>

 <div class="detail-field">
 <label>Event (Background)</label>
 <input type="text" name="system.event" value="{{system.event}}" placeholder="Scarred, Exiled, etc."/>
 </div>

 <div class="detail-field">
 <label>Profession (Background)</label>
 <input type="text" name="system.profession" value="{{system.profession}}" placeholder="Soldier, Pilot, etc."/>
 </div>

 <div class="detail-field">
 <label>Planet of Origin</label>
 <input type="text" name="system.planetOfOrigin" value="{{system.planetOfOrigin}}" placeholder="Tatooine, Corellia, etc."/>
 </div>

 <div class="detail-field background-picker-row">
 <label>Choose Background</label>
 <button type="button" class="choose-background-btn" title="Open background selection dialog">
 <i class="fas fa-book-open"></i> Select Background
 </button>
 </div>

 <div class="detail-field">
 <label>Size</label>
 <select name="system.size">
 <option value="Fine" {{#if (eq system.size "Fine")}}selected{{/if}}>Fine</option>
 <option value="Diminutive" {{#if (eq system.size "Diminutive")}}selected{{/if}}>Diminutive</option>
 <option value="Tiny" {{#if (eq system.size "Tiny")}}selected{{/if}}>Tiny</option>
 <option value="Small" {{#if (eq system.size "Small")}}selected{{/if}}>Small</option>
 <option value="Medium" {{#if (eq system.size "Medium")}}selected{{/if}}>Medium</option>
 <option value="Large" {{#if (eq system.size "Large")}}selected{{/if}}>Large</option>
 <option value="Huge" {{#if (eq system.size "Huge")}}selected{{/if}}>Huge</option>
 <option value="Gargantuan" {{#if (eq system.size "Gargantuan")}}selected{{/if}}>Gargantuan</option>
 <option value="Colossal" {{#if (eq system.size "Colossal")}}selected{{/if}}>Colossal</option>
 </select>
 </div>
 </div>

 <h3 class="section-header">Dark Side Corruption</h3>

 <div class="dark-side-tracker-container">
 <div class="dark-side-tracker">
 <label class="tracker-label">
 Dark Side Score: <span class="dark-side-value">{{system.darkSideScore}}</span> / <span class="dark-side-max">{{darkSideMax}}</span>
 </label>
 <div class="dark-side-segments" data-max-segments="{{darkSideMax}}">
 {{#each darkSideSegments}}
 <div class="dark-side-segment {{#if this.active}}active{{/if}}{{#if this.isCurrent}} current{{/if}}"
 data-segment="{{this.index}}"
 data-color-level="{{this.colorLevel}}"
 style="background-color: {{this.color}};"
 title="Click to set Dark Side Score to {{this.index}}">
 </div>
 {{/each}}
 </div>
 <div class="dark-side-description">
 {{#if (gte system.darkSideScore darkSideMax)}}
 <span class="corrupted"><i class="fas fa-skull"></i> Fully Corrupted by the Dark Side</span>
 {{else if (gte system.darkSideScore (mult darkSideMax 0.75))}}
 <span class="heavily-corrupted"><i class="fas fa-exclamation-triangle"></i> Heavily Corrupted</span>
 {{else if (gte system.darkSideScore (mult darkSideMax 0.5))}}
 <span class="moderately-corrupted"><i class="fas fa-moon"></i> Moderately Corrupted</span>
 {{else if (gt system.darkSideScore 0)}}
 <span class="lightly-corrupted"><i class="fas fa-adjust"></i> Touched by the Dark Side</span>
 {{else}}
 <span class="light-side"><i class="fas fa-sun"></i> Pure in the Force</span>
 {{/if}}
 </div>
 <div class="dark-side-actions">
 <button class="dsp-action-btn reduce-dsp" title="Reduce your Dark Side Points">
 <i class="fas fa-dove"></i> Reduce DSP
 </button>
 <button class="dsp-action-btn increase-dsp" title="Increase your Dark Side Points by 1">
 <i class="fas fa-fire"></i> Increase DSP
 </button>
 {{#if (and hasForceSensitivity darkInspirationEnabled)}}
 <button class="dsp-action-btn dark-inspiration" title="Use the Force with dark side power">
 <i class="fas fa-bolt"></i> Dark Inspiration
 </button>
 {{/if}}
 </div>
 </div>
 </div>

 {{!-- Destiny Section (moved from summary tab) --}}
 <section class="destiny-section">
 <h3 class="section-header"><i class="fas fa-star"></i> Destiny</h3>
 <div class="destiny-content">
 {{#if system.destiny.hasDestiny}}
 <div class="destiny-grid">
 {{!-- Status --}}
 <div class="destiny-status">
 <label>Status:</label>
 <div class="status-display">
 {{#if system.destiny.fulfilled}}
 <span class="status-fulfilled">
 <i class="fas fa-crown"></i> Fulfilled
 </span>
 {{else}}
 <span class="status-active">
 <i class="fas fa-star"></i> Active
 </span>
 {{/if}}
 </div>
 </div>

 {{!-- Type --}}
 {{#if system.destiny.type}}
 <div class="destiny-type">
 <label>Type:</label>
 <input type="text"
 name="system.destiny.type"
 value="{{system.destiny.type}}"
 placeholder="Destiny type (e.g., Hero, Villain)"
 class="destiny-type-input"/>
 </div>
 {{else}}
 <div class="destiny-type">
 <label>Type:</label>
 <input type="text"
 name="system.destiny.type"
 value=""
 placeholder="Destiny type (e.g., Hero, Villain)"
 class="destiny-type-input"/>
 </div>
 {{/if}}

 {{!-- Secret Flag --}}
 <div class="destiny-secret">
 <label class="checkbox-label">
 <input type="checkbox"
 name="system.destiny.secret"
 {{checked system.destiny.secret}}
 title="Mark this Destiny as secret (hidden from players)"/>
 <i class="fas fa-lock"></i>
 <span>Secret Destiny</span>
 </label>
 </div>

 {{!-- Control Buttons --}}
 <div class="destiny-controls">
 {{!-- Spend Button (available to all) --}}
 {{#if (not system.destiny.fulfilled)}}
 {{#if (gt system.destinyPoints.value 0)}}
 <button class="spend-destiny-btn" type="button" title="Spend a Destiny Point">
 <i class="fas fa-star"></i> Spend Destiny Point
 </button>
 {{/if}}
 {{/if}}

 {{!-- GM Controls --}}
 {{#if isGM}}
 {{#if (not system.destiny.fulfilled)}}
 <button class="fulfill-destiny-btn" type="button" title="Mark this Destiny as fulfilled">
 <i class="fas fa-crown"></i> Fulfill Destiny
 </button>
 {{else}}
 <button class="reset-destiny-btn" type="button" title="Reset this Destiny to active">
 <i class="fas fa-redo"></i> Reset Destiny
 </button>
 {{/if}}
 {{/if}}
 </div>
 </div>
 {{else}}
 <div class="no-destiny">
 <p class="hint-text">
 <i class="fas fa-info-circle"></i>
 This character does not have a Destiny.
 </p>
 {{#if isGM}}
 <button class="enable-destiny-btn" type="button" title="Enable Destiny for this character">
 <i class="fas fa-plus"></i> Enable Destiny
 </button>
 {{/if}}
 </div>
 {{/if}}
 </div>
 </section>

 <h3 class="section-header">Biography</h3>

 <div class="editor-content">
 {{editor enrichedBiography target="system.biography" button=true owner=owner editable=editable}}
 </div>

 <h3 class="section-header">Notes</h3>

 <div class="editor-content">
 {{editor enrichedNotes target="system.notes" button=true owner=owner editable=editable}}
 </div>
</div>
