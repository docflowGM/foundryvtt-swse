<div class="tab inventory-tab" data-group="primary" data-tab="inventory">
 <h3 class="section-header">
 Equipment
 <button class="open-store" style="float: right;" title="Open Galactic Trade Exchange">
 <i class="{{getIconClass 'cart'}}"></i> Store
 </button>
 </h3>

 <div class="inventory-list">
 {{#if equipment.length}}
   {{#each equipment as |item|}}
   <div class="item-row flexrow" data-item-id="{{item._id}}">
   <img src="{{item.img}}" width="24" height="24" alt="{{item.name}}"/>
   <span class="item-name">{{item.name}}</span>
   <input type="number"
   name="items.{{item._id}}.system.quantity"
   value="{{item.system.quantity}}"
   data-dtype="Number"
   placeholder="1"
   class="item-quantity"/>
   <span class="item-weight">{{item.system.weight}} kg</span>
   <div class="item-controls flexrow">
   <a class="item-control item-edit" data-action="edit" title="Edit">
   <i class="{{getIconClass 'edit'}}"></i>
   </a>
   <a class="item-control item-delete" data-action="delete" title="Delete">
   <i class="{{getIconClass 'trash'}}"></i>
   </a>
   </div>
   </div>
   {{/each}}
 {{else}}
   <div class="empty-state">
     <i class="{{getIconClass 'boxOpen'}}"></i>
     <p>No equipment yet.</p>
     <p class="hint">Click "Add Equipment" below to add items to your inventory.</p>
   </div>
 {{/if}}
 </div>

 <button class="add-equipment" data-action="createItem" data-type="equipment">
 <i class="{{getIconClass 'plus'}}"></i> Add Equipment
 </button>

 <div class="currency-section">
 <h3 class="section-header">Credits</h3>
 <input type="number"
 name="system.credits"
 value="{{system.credits}}"
 data-dtype="Number"
 placeholder="0"
 class="credits-input"/>
 </div>
</div>
