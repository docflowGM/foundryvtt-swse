<div class="tab combat-tab" data-group="primary" data-tab="combat">
 <h3 class="section-header">Combat Statistics</h3>

 <div class="combat-stats-grid">
 <div class="combat-stat">
 <label>Base Attack Bonus</label>
 <input type="number" 
 name="system.bab" 
 value="{{system.bab}}" 
 data-dtype="Number"
 placeholder="0"/>
 </div>

 <div class="combat-stat">
 <label>Speed</label>
 <input type="number" 
 name="system.speed" 
 value="{{system.speed}}" 
 data-dtype="Number"
 placeholder="6"/> squares
 </div>

 <div class="combat-stat">
 <label>Initiative</label>
 <div class="initiative-value rollable"
 data-roll="1d20+@initiative"
 data-label="Initiative">
 {{numberFormat system.initiative sign=true}}
 </div>
 </div>

 <div class="combat-stat">
 <label>Damage Threshold</label>
 <div class="threshold-value">{{system.damageThreshold}}</div>
 </div>

 <div class="combat-stat shields-stat">
 <label>Personal Shields</label>
 <div class="shields-display">
 <input type="number"
 name="system.shields.value"
 value="{{system.shields.value}}"
 data-dtype="Number"
 placeholder="0"
 class="shield-current"/>
 <span>/</span>
 <input type="number"
 name="system.shields.max"
 value="{{system.shields.max}}"
 data-dtype="Number"
 placeholder="0"
 class="shield-max"/>
 </div>
 {{#if (gt system.shields.max 0)}}
 <div class="shield-rating">Rating: SR {{system.shields.rating}}</div>
 {{/if}}
 </div>

 <div class="combat-stat dr-stat">
 <label>Damage Reduction (DR)</label>
 <input type="number"
 name="system.damageReduction"
 value="{{system.damageReduction}}"
 data-dtype="Number"
 placeholder="0"
 class="dr-value"/>
 </div>
 </div>

 <h3 class="section-header">Weapons</h3>

 <div class="weapons-list">
 <div class="weapons-header flexrow">
 <div class="weapon-col-name">Weapon</div>
 <div class="weapon-col-attack">Attack</div>
 <div class="weapon-col-damage">Damage</div>
 <div class="weapon-col-crit">Critical</div>
 <div class="weapon-col-controls"></div>
 </div>

 {{#each weapons as |weapon|}}
 <div class="weapon-row flexrow" data-item-id="{{weapon._id}}">
 <div class="weapon-name">
 <img src="{{weapon.img}}" width="24" height="24" alt="{{weapon.name}}"/>
 {{weapon.name}}
 </div>

 <div class="weapon-attack rollable"
 data-action="rollAttack"
 data-item-id="{{weapon._id}}">
 {{numberFormat weapon.system.attackBonus sign=true}}
 </div>

 <div class="weapon-damage rollable"
 data-action="rollDamage"
 data-item-id="{{weapon._id}}">
 {{weapon.system.damage}}
 </div>

 <div class="weapon-crit">
 {{weapon.system.critical}}
 </div>

 <div class="weapon-controls flexrow">
 <a class="item-control item-edit" title="Edit">
 <i class="fas fa-edit"></i>
 </a>
 <a class="item-control item-delete" title="Delete">
 <i class="fas fa-trash"></i>
 </a>
 </div>
 </div>
 {{/each}}

 <button class="add-weapon" data-action="createItem" data-type="weapon">
 <i class="fas fa-plus"></i> Add Weapon
 </button>
 </div>

 <h3 class="section-header">Armor</h3>

 <div class="armor-section">
 {{#each armor as |item|}}
 <div class="armor-row flexrow" data-item-id="{{item._id}}">
 <img src="{{item.img}}" width="24" height="24" alt="{{item.name}}"/>
 <span class="armor-name">{{item.name}}</span>
 <span class="armor-bonus">Reflex: +{{item.system.defenseBonus}}</span>
 <span class="armor-max-dex">Max Dex: +{{item.system.maxDexBonus}}</span>
 <label>
 <input type="checkbox"
 name="items.{{item._id}}.system.equipped"
 {{checked item.system.equipped}}/>
 Equipped
 </label>
 <div class="item-controls flexrow">
 <a class="item-control item-edit" title="Edit">
 <i class="fas fa-edit"></i>
 </a>
 <a class="item-control item-delete" title="Delete">
 <i class="fas fa-trash"></i>
 </a>
 </div>
 </div>
 {{/each}}

 <button class="add-armor" data-action="createItem" data-type="armor">
 <i class="fas fa-shield-alt"></i> Add Armor
 </button>
 </div>

 <h3 class="section-header">Feats</h3>

 <div class="feats-list">
 {{#each feats as |feat|}}
 <div class="feat-row flexrow" data-item-id="{{feat._id}}">
 <img src="{{feat.img}}" width="20" height="20" alt="{{feat.name}}"/>
 <span class="feat-name">{{feat.name}}</span>
 <div class="item-controls flexrow">
 <a class="item-control item-edit" title="Edit">
 <i class="fas fa-edit"></i>
 </a>
 <a class="item-control item-delete" title="Delete">
 <i class="fas fa-trash"></i>
 </a>
 </div>
 </div>
 {{/each}}

 <button class="add-feat" data-action="createItem" data-type="feat">
 <i class="fas fa-star"></i> Add Feat
 </button>
 </div>
</div>
