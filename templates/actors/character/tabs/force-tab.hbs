<div class="tab force-tab" data-group="primary" data-tab="force">
 <h3 class="section-header">Force Points</h3>

 <div class="force-points-section flexrow">
 <div class="force-points-display">
 <label>Force Points</label>
 <div class="resource-bar flexrow">
 <input type="number"
 name="system.forcePoints.value"
 value="{{system.forcePoints.value}}"
 data-dtype="Number"
 class="force-current"/>
 <span>/</span>
 <input type="number"
 name="system.forcePoints.max"
 value="{{system.forcePoints.max}}"
 data-dtype="Number"
 class="force-max-input"
 title="Maximum Force Points (editable)"/>
 </div>
 </div>

 <div class="force-reroll">
 <label>Reroll Dice</label>
 <div class="reroll-dice">{{forceRerollDice}}</div>
 </div>

 <div class="force-dice-type">
 <label>Dice Type</label>
 <select name="system.forcePoints.diceType" class="dice-type-select">
 <option value="d6" {{#if (eq system.forcePoints.diceType "d6")}}selected{{/if}}>d6</option>
 <option value="d8" {{#if (eq system.forcePoints.diceType "d8")}}selected{{/if}}>d8</option>
 </select>
 </div>

 <div class="dark-side">
 <label>Dark Side Score</label>
 <input type="number"
 name="system.darkSideScore"
 value="{{system.darkSideScore}}"
 data-dtype="Number"
 placeholder="0"/>
 </div>
 </div>

 <div class="force-actions flexrow">
 <button class="force-action" data-action="spendForcePoint" data-type="reroll">
 <i class="fas fa-dice"></i> Reroll
 </button>
 <button class="force-action" data-action="spendForcePoint" data-type="avoid-death">
 <i class="fas fa-heart"></i> Avoid Death
 </button>
 <button class="force-action" data-action="spendForcePoint" data-type="reduce-dark">
 <i class="fas fa-moon"></i> Reduce Dark Side
 </button>
 <button class="force-action" data-action="restForce">
 <i class="fas fa-bed"></i> Rest (Regain All)
 </button>
 </div>

 <h3 class="section-header">Force Powers Suite</h3>

 <div class="force-suite-manager flexrow">
 <div class="powers-column known-powers">
 <h4>Known Powers</h4>
 <div class="powers-list drop-zone" data-zone="known">
 {{#each knownPowers as |power|}}
 <div class="power-card" 
 draggable="true"
 data-item-id="{{power._id}}">
 <img src="{{power.img}}" width="32" height="32" alt="{{power.name}}"/>
 <span class="power-name">{{power.name}}</span>
 <div class="power-controls">
 <a class="add-to-suite" data-action="addToSuite" data-item-id="{{power._id}}">
 <i class="fas fa-arrow-right"></i>
 </a>
 </div>
 </div>
 {{/each}}
 </div>

 <button class="add-power" data-action="createItem" data-type="forcepower">
 <i class="fas fa-plus"></i> Add Power
 </button>
 </div>

 <div class="suite-arrow">
 <i class="fas fa-exchange-alt"></i>
 </div>

 <div class="powers-column active-suite">
 <h4>Active Suite ({{activeSuite.length}}/{{system.forceSuite.max}})</h4>
 <div class="powers-list drop-zone suite-zone" data-zone="suite">
 {{#each activeSuite as |power|}}
 <div class="power-card in-suite {{#if power.system.spent}}power-spent{{/if}}"
 draggable="true"
 data-item-id="{{power._id}}">
 <img src="{{power.img}}" width="32" height="32" alt="{{power.name}}"/>
 <span class="power-name">{{power.name}}{{#if power.system.spent}} <span class="spent-indicator">(SPENT)</span>{{/if}}</span>
 <div class="power-controls">
 {{#if power.system.spent}}
 <a class="regain-power" data-action="regainForcePower" data-item-id="{{power._id}}" title="Spend Force Point to regain">
 <i class="fas fa-redo"></i>
 </a>
 {{else}}
 <a class="use-power" data-action="usePower" data-item-id="{{power._id}}">
 <i class="fas fa-hand-sparkles"></i>
 </a>
 {{/if}}
 <a class="remove-from-suite" data-action="removeFromSuite" data-item-id="{{power._id}}">
 <i class="fas fa-arrow-left"></i>
 </a>
 </div>
 </div>
 {{/each}}

 {{#times (subtract system.forceSuite.max activeSuite.length)}}
 <div class="empty-slot">Empty Slot</div>
 {{/times}}
 </div>
 </div>
 </div>

 <h3 class="section-header">Force Secrets</h3>

 <div class="force-secrets-section">
 <div class="secrets-list">
 {{#each forceSecrets as |secret|}}
 <div class="secret-item" data-item-id="{{secret._id}}">
 <div class="secret-header flexrow">
 <img src="{{secret.img}}" width="24" height="24" alt="{{secret.name}}"/>
 <span class="secret-name">{{secret.name}}</span>
 <div class="item-controls">
 <a class="item-control item-edit" data-action="edit" title="Edit Secret">
 <i class="fas fa-edit"></i>
 </a>
 <a class="item-control item-delete" data-action="delete" title="Delete Secret">
 <i class="fas fa-trash"></i>
 </a>
 </div>
 </div>
 {{#if secret.system.description}}
 <div class="secret-description">{{secret.system.description}}</div>
 {{/if}}
 </div>
 {{else}}
 <p class="empty-list">No Force Secrets. Jedi Knights and Masters gain these through level up.</p>
 {{/each}}
 </div>
 <button class="add-secret" data-action="createItem" data-type="feat" title="Add Force Secret">
 <i class="fas fa-plus"></i> Add Force Secret
 </button>
 </div>

 <h3 class="section-header">Force Techniques</h3>

 <div class="force-techniques-section">
 <div class="techniques-list">
 {{#each forceTechniques as |technique|}}
 <div class="technique-item" data-item-id="{{technique._id}}">
 <div class="technique-header flexrow">
 <img src="{{technique.img}}" width="24" height="24" alt="{{technique.name}}"/>
 <span class="technique-name">{{technique.name}}</span>
 <div class="item-controls">
 <a class="item-control item-edit" data-action="edit" title="Edit Technique">
 <i class="fas fa-edit"></i>
 </a>
 <a class="item-control item-delete" data-action="delete" title="Delete Technique">
 <i class="fas fa-trash"></i>
 </a>
 </div>
 </div>
 {{#if technique.system.description}}
 <div class="technique-description">{{technique.system.description}}</div>
 {{/if}}
 </div>
 {{else}}
 <p class="empty-list">No Force Techniques. Jedi Knights and Masters gain these through level up.</p>
 {{/each}}
 </div>
 <button class="add-technique" data-action="createItem" data-type="feat" title="Add Force Technique">
 <i class="fas fa-plus"></i> Add Force Technique
 </button>
 </div>

 <h3 class="section-header">Lightsaber Forms</h3>

 <div class="lightsaber-forms-section">
 <div class="forms-list">
 {{#each lightsaberForms as |form|}}
 <div class="form-item" data-item-id="{{form._id}}">
 <div class="form-header flexrow">
 <img src="{{form.img}}" width="24" height="24" alt="{{form.name}}"/>
 <span class="form-name">{{form.name}}</span>
 <div class="item-controls">
 <a class="item-control item-edit" data-action="edit" title="Edit Form">
 <i class="fas fa-edit"></i>
 </a>
 <a class="item-control item-delete" data-action="delete" title="Delete Form">
 <i class="fas fa-trash"></i>
 </a>
 </div>
 </div>
 {{#if form.system.benefit}}
 <div class="form-benefit">{{form.system.benefit}}</div>
 {{/if}}
 </div>
 {{else}}
 <p class="empty-list">No Lightsaber Forms. Jedi gain these talents from the Lightsaber Forms talent tree.</p>
 {{/each}}
 </div>
 </div>
</div>
