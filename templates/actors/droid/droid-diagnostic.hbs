<div class="droid-level3">

  {{!-- Floating Mode Toggle --}}
  <div class="droid-mode-toggle" data-toggle-mode>
    {{#if (eq viewMode "blueprint")}}
      <img src="/systems/foundryvtt-swse/assets/ui/icon-mode-blueprint.svg"
           class="toggle-icon" title="Switch to Operational Mode" />
    {{else}}
      <img src="/systems/foundryvtt-swse/assets/ui/icon-mode-operational.svg"
           class="toggle-icon" title="Switch to Blueprint Mode" />
    {{/if}}
  </div>

  {{!-- Operational Mode --}}
  {{#if (or (eq viewMode null) (eq viewMode "operational"))}}
    <div class="droid-mode operational-mode fade-in">
      {{> "systems/foundryvtt-swse/templates/actors/droid/droid-image-operational.hbs" actor=actor}}
      {{> "systems/foundryvtt-swse/templates/actors/droid/droid-callouts-operational.hbs" actor=actor}}
    </div>
  {{/if}}

  {{!-- Blueprint Mode --}}
  {{#if (eq viewMode "blueprint")}}
    <div class="droid-mode blueprint-mode fade-in">
      {{> "systems/foundryvtt-swse/templates/actors/droid/droid-image-blueprint.hbs" actor=actor}}
      {{> "systems/foundryvtt-swse/templates/actors/droid/droid-callouts-blueprint.hbs" actor=actor}}
    </div>
  {{/if}}

</div>
