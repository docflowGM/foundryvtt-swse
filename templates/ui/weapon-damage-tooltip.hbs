{{!-- Weapon Damage Breakdown Tooltip showing all modifiers affecting damage --}}
<div class="weapon-breakdown-tooltip damage-breakdown" data-breakdown="damage">

  <div class="tooltip-header">
    <h4>{{weaponName}} Damage Breakdown</h4>
    <span class="total-value">Total: {{total}}</span>
  </div>

  {{!-- BASE CALCULATION --}}
  <div class="breakdown-section base-calculation">
    <h5 class="section-title">Base Components</h5>
    {{#if baseDamage}}
      <div class="calc-item">
        <span class="item-source">Damage Dice</span>
        <span class="item-value">{{baseDamage.expression}} ({{baseDamage.type}})</span>
      </div>
    {{/if}}

    {{#each components as |value source|}}
      {{#if value}}
        <div class="calc-item">
          <span class="item-source">{{source}}</span>
          <span class="item-value {{#if value}}positive{{else}}negative{{/if}}">
            {{#if value}}+{{/if}}{{value}}
          </span>
        </div>
      {{/if}}
    {{/each}}

    <div class="calc-divider"></div>
    <div class="calc-item total">
      <span class="item-source">Subtotal</span>
      <span class="item-value">{{subtotal}}</span>
    </div>
  </div>

  {{!-- MODIFIERS FROM EQUIPMENT & CONDITIONS --}}
  {{#if modifiers}}
    <div class="breakdown-section modifier-breakdown">
      <h5 class="section-title">Modifiers ({{modifiers.length}})</h5>

      {{#each modifiers as |mod|}}
        <div class="modifier-item {{mod.source}} {{mod.type}}">
          <span class="modifier-source" title="{{mod.sourceName}}">
            {{mod.sourceName}}
          </span>
          <span class="modifier-value {{#if mod.value}}positive{{else}}neutral{{/if}}">
            {{#if mod.value}}+{{/if}}{{mod.value}}
          </span>
          {{#if mod.description}}
            <span class="modifier-description">{{mod.description}}</span>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/if}}

  {{!-- WEAPON PROPERTIES --}}
  {{#if properties}}
    <div class="breakdown-section weapon-properties">
      <h5 class="section-title">Weapon Properties</h5>
      {{#each properties as |prop|}}
        <div class="property-item">
          <span class="property-name">{{prop.name}}</span>
          <span class="property-effect">{{prop.effect}}</span>
        </div>
      {{/each}}
    </div>
  {{/if}}

  {{!-- FINAL TOTAL --}}
  <div class="breakdown-section final-total">
    <div class="total-calculation">
      <span class="label">Final Damage Bonus:</span>
      <span class="value">{{total}}</span>
    </div>
  </div>

</div>

