<div class="swse-sheet homebrew-manager">
  <form class="swse-homebrew-form" autocomplete="off">

    {{!-- Header --}}
    <header class="sheet-header">
      <h2>SWSE Homebrew Content Manager</h2>
      <p class="hint">Create and manage custom content for your world</p>
    </header>

    {{!-- Navigation Tabs --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item active" data-tab="feats">Feats</a>
      <a class="item" data-tab="talents">Talents</a>
      <a class="item" data-tab="powers">Force Powers</a>
      <a class="item" data-tab="species">Species</a>
      <a class="item" data-tab="classes">Classes</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

      {{!-- Feats Tab --}}
      <div class="tab content" data-group="primary" data-tab="feats">
        <div class="tab-header">
          <h3>Custom Feats</h3>
          <button type="button" class="create-button" data-action="createFeat">
            <i class="fas fa-plus"></i> Create Feat
          </button>
        </div>
        <div class="homebrew-list">
          {{#if homebrew.feats.length}}
            {{#each homebrew.feats}}
              <div class="homebrew-item">
                <h4>{{this.name}}</h4>
                <p>{{this.description}}</p>
                {{#if this.prerequisite}}
                  <div class="prerequisite">Prerequisite: {{this.prerequisite}}</div>
                {{/if}}
                <button type="button" class="delete-button" data-action="delete" data-type="feats" data-id="{{this.id}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            {{/each}}
          {{else}}
            <div class="empty-state">
              <p>No custom feats created yet.</p>
            </div>
          {{/if}}
        </div>
      </div>

      {{!-- Talents Tab --}}
      <div class="tab content" data-group="primary" data-tab="talents">
        <div class="tab-header">
          <h3>Custom Talents</h3>
          <button type="button" class="create-button" data-action="createTalent">
            <i class="fas fa-plus"></i> Create Talent
          </button>
        </div>
        <div class="homebrew-list">
          {{#if homebrew.talents.length}}
            {{#each homebrew.talents}}
              <div class="homebrew-item">
                <h4>{{this.name}}</h4>
                <p>{{this.description}}</p>
                {{#if this.tree}}
                  <div class="talent-tree">Tree: {{this.tree}}</div>
                {{/if}}
                <button type="button" class="delete-button" data-action="delete" data-type="talents" data-id="{{this.id}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            {{/each}}
          {{else}}
            <div class="empty-state">
              <p>No custom talents created yet.</p>
            </div>
          {{/if}}
        </div>
      </div>

      {{!-- Force Powers Tab --}}
      <div class="tab content" data-group="primary" data-tab="powers">
        <div class="tab-header">
          <h3>Custom Force Powers</h3>
          <button type="button" class="create-button" data-action="createForcePower">
            <i class="fas fa-plus"></i> Create Force Power
          </button>
        </div>
        <div class="homebrew-list">
          {{#if homebrew.forcePowers.length}}
            {{#each homebrew.forcePowers}}
              <div class="homebrew-item">
                <h4>{{this.name}}</h4>
                <p>{{this.description}}</p>
                {{#if this.action}}
                  <div class="power-action">Action: {{this.action}}</div>
                {{/if}}
                {{#if this.checkType}}
                  <div class="power-check">Check: {{this.checkType}}</div>
                {{/if}}
                <button type="button" class="delete-button" data-action="delete" data-type="forcePowers" data-id="{{this.id}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            {{/each}}
          {{else}}
            <div class="empty-state">
              <p>No custom Force powers created yet.</p>
            </div>
          {{/if}}
        </div>
      </div>

      {{!-- Species Tab --}}
      <div class="tab content" data-group="primary" data-tab="species">
        <div class="tab-header">
          <h3>Custom Species</h3>
          <button type="button" class="create-button" data-action="createSpecies" disabled>
            <i class="fas fa-plus"></i> Create Species
          </button>
        </div>
        <div class="homebrew-list">
          <div class="empty-state">
            <p>Custom species creation coming soon.</p>
          </div>
        </div>
      </div>

      {{!-- Classes Tab --}}
      <div class="tab content" data-group="primary" data-tab="classes">
        <div class="tab-header">
          <h3>Custom Classes</h3>
          <button type="button" class="create-button" data-action="createClass" disabled>
            <i class="fas fa-plus"></i> Create Class
          </button>
        </div>
        <div class="homebrew-list">
          <div class="empty-state">
            <p>Custom class creation coming soon.</p>
          </div>
        </div>
      </div>

    </section>

    {{!-- Footer --}}
    <footer class="sheet-footer">
      <button type="button" class="export-button" data-action="export">
        <i class="fas fa-file-export"></i> Export Homebrew
      </button>
      <button type="button" class="import-button" data-action="import">
        <i class="fas fa-file-import"></i> Import Homebrew
      </button>
    </footer>

  </form>
</div>

<style>
  .homebrew-manager {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .homebrew-manager .sheet-header {
    padding: 1rem;
    border-bottom: 1px solid #999;
  }

  .homebrew-manager .sheet-header h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  .homebrew-manager .sheet-header .hint {
    margin: 0.25rem 0 0;
    color: #666;
    font-size: 0.9rem;
  }

  .homebrew-manager .sheet-tabs {
    border-bottom: 1px solid #999;
  }

  .homebrew-manager .sheet-body {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }

  .homebrew-manager .tab-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .homebrew-manager .tab-header h3 {
    margin: 0;
  }

  .homebrew-manager .create-button {
    padding: 0.5rem 1rem;
    background: var(--color-primary, #4b4a44);
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  .homebrew-manager .create-button:hover:not(:disabled) {
    background: var(--color-primary-dark, #3a3933);
  }

  .homebrew-manager .create-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .homebrew-manager .homebrew-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .homebrew-manager .homebrew-item {
    position: relative;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.05);
    border: 1px solid #999;
    border-radius: 3px;
  }

  .homebrew-manager .homebrew-item h4 {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
  }

  .homebrew-manager .homebrew-item p {
    margin: 0 0 0.5rem;
  }

  .homebrew-manager .homebrew-item .prerequisite,
  .homebrew-manager .homebrew-item .talent-tree,
  .homebrew-manager .homebrew-item .power-action,
  .homebrew-manager .homebrew-item .power-check {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.25rem;
  }

  .homebrew-manager .delete-button {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.25rem 0.5rem;
    background: #c03;
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  .homebrew-manager .delete-button:hover {
    background: #a02;
  }

  .homebrew-manager .empty-state {
    padding: 2rem;
    text-align: center;
    color: #666;
  }

  .homebrew-manager .sheet-footer {
    padding: 1rem;
    border-top: 1px solid #999;
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
  }

  .homebrew-manager .export-button,
  .homebrew-manager .import-button {
    padding: 0.5rem 1rem;
    background: var(--color-secondary, #666);
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  .homebrew-manager .export-button:hover,
  .homebrew-manager .import-button:hover {
    background: var(--color-secondary-dark, #555);
  }
</style>



  <div class="tab assets" data-tab="assets">
    {{> swse/assets-panel}}
  </div>
