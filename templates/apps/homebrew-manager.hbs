<div class="swse-sheet homebrew-manager">
  <form class="swse-homebrew-form" autocomplete="off">

    {{!-- Header --}}
    <header class="sheet-header">
      <h2>SWSE Homebrew Content Manager</h2>
      <p class="hint">Create and manage custom content for your world</p>
    </header>

    {{!-- Navigation Tabs --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item active" data-tab="feats">Feats</a>
      <a class="item" data-tab="talents">Talents</a>
      <a class="item" data-tab="powers">Force Powers</a>
      <a class="item" data-tab="species">Species</a>
      <a class="item" data-tab="classes">Classes</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

      {{!-- Feats Tab --}}
      <div class="tab content" data-group="primary" data-tab="feats">
        <div class="tab-header">
          <h3>Custom Feats</h3>
          <button type="button" class="create-button" data-action="createFeat">
            <i class="{{getIconClass 'plus'}}"></i> Create Feat
          </button>
        </div>
        <div class="homebrew-list">
          {{#if homebrew.feats.length}}
            {{#each homebrew.feats}}
              <div class="homebrew-item">
                <h4>{{this.name}}</h4>
                <p>{{this.description}}</p>
                {{#if this.prerequisite}}
                  <div class="prerequisite">Prerequisite: {{this.prerequisite}}</div>
                {{/if}}
                <button type="button" class="delete-button" data-action="delete" data-type="feats" data-id="{{this.id}}">
                  <i class="{{getIconClass 'trash'}}"></i>
                </button>
              </div>
            {{/each}}
          {{else}}
            <div class="empty-state">
              <p>No custom feats created yet.</p>
            </div>
          {{/if}}
        </div>
      </div>

      {{!-- Talents Tab --}}
      <div class="tab content" data-group="primary" data-tab="talents">
        <div class="tab-header">
          <h3>Custom Talents</h3>
          <button type="button" class="create-button" data-action="createTalent">
            <i class="{{getIconClass 'plus'}}"></i> Create Talent
          </button>
        </div>
        <div class="homebrew-list">
          {{#if homebrew.talents.length}}
            {{#each homebrew.talents}}
              <div class="homebrew-item">
                <h4>{{this.name}}</h4>
                <p>{{this.description}}</p>
                {{#if this.tree}}
                  <div class="talent-tree">Tree: {{this.tree}}</div>
                {{/if}}
                <button type="button" class="delete-button" data-action="delete" data-type="talents" data-id="{{this.id}}">
                  <i class="{{getIconClass 'trash'}}"></i>
                </button>
              </div>
            {{/each}}
          {{else}}
            <div class="empty-state">
              <p>No custom talents created yet.</p>
            </div>
          {{/if}}
        </div>
      </div>

      {{!-- Force Powers Tab --}}
      <div class="tab content" data-group="primary" data-tab="powers">
        <div class="tab-header">
          <h3>Custom Force Powers</h3>
          <button type="button" class="create-button" data-action="createForcePower">
            <i class="{{getIconClass 'plus'}}"></i> Create Force Power
          </button>
        </div>
        <div class="homebrew-list">
          {{#if homebrew.forcePowers.length}}
            {{#each homebrew.forcePowers}}
              <div class="homebrew-item">
                <h4>{{this.name}}</h4>
                <p>{{this.description}}</p>
                {{#if this.action}}
                  <div class="power-action">Action: {{this.action}}</div>
                {{/if}}
                {{#if this.checkType}}
                  <div class="power-check">Check: {{this.checkType}}</div>
                {{/if}}
                <button type="button" class="delete-button" data-action="delete" data-type="forcePowers" data-id="{{this.id}}">
                  <i class="{{getIconClass 'trash'}}"></i>
                </button>
              </div>
            {{/each}}
          {{else}}
            <div class="empty-state">
              <p>No custom Force powers created yet.</p>
            </div>
          {{/if}}
        </div>
      </div>

      {{!-- Species Tab --}}
      <div class="tab content" data-group="primary" data-tab="species">
        <div class="tab-header">
          <h3>Custom Species</h3>
          <button type="button" class="create-button" data-action="createSpecies" disabled>
            <i class="{{getIconClass 'plus'}}"></i> Create Species
          </button>
        </div>
        <div class="homebrew-list">
          <div class="empty-state">
            <p>Custom species creation coming soon.</p>
          </div>
        </div>
      </div>

      {{!-- Classes Tab --}}
      <div class="tab content" data-group="primary" data-tab="classes">
        <div class="tab-header">
          <h3>Custom Classes</h3>
          <button type="button" class="create-button" data-action="createClass" disabled>
            <i class="{{getIconClass 'plus'}}"></i> Create Class
          </button>
        </div>
        <div class="homebrew-list">
          <div class="empty-state">
            <p>Custom class creation coming soon.</p>
          </div>
        </div>
      </div>

    </section>

    {{!-- Footer --}}
    <footer class="sheet-footer">
      <button type="button" class="export-button" data-action="export">
        <i class="{{getIconClass 'fileExport'}}"></i> Export Homebrew
      </button>
      <button type="button" class="import-button" data-action="import">
        <i class="{{getIconClass 'fileImport'}}"></i> Import Homebrew
      </button>
    </footer>

  </form>
</div>




  <div class="tab assets" data-tab="assets">
    {{> "systems/foundryvtt-swse/templates/partials/assets-panel.hbs"}}
  </div>
