<div class="mentor-goal-dialog swse kotor-style">

  <div class="goal-setup">

    <!-- Introduction -->
    <div class="goal-introduction">
      <h3>Choose Your Path</h3>
      <p>Select one or both of the following to set a personal goal. Your mentor will guide suggestions accordingly.</p>
    </div>

    <!-- Two-Column Layout: Archetypes and Prestige Classes -->
    <div class="goal-columns">

      <!-- Left Column: Archetypes -->
      <div class="goal-column archetypes-column">
        <h4>Class Archetypes</h4>
        <p class="column-help">Different ways to play {{primaryClass}}</p>
        <div class="archetype-list">
          {{#each archetypes}}
            <div class="archetype-card {{#if this.selected}}selected{{/if}}" data-archetype="{{this.key}}">
              <div class="archetype-header">
                <h5>{{this.displayName}}</h5>
                {{#if this.selected}}
                  <span class="selection-badge">✓ Selected</span>
                {{/if}}
              </div>
              <p class="archetype-description">{{this.description}}</p>
              {{#if this.philosophyStatement}}
                <p class="archetype-philosophy"><em>"{{this.philosophyStatement}}"</em></p>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>

      <!-- Right Column: Prestige Classes -->
      <div class="goal-column prestige-column">
        <h4>Prestige Classes</h4>
        <p class="column-help">Long-term specialization goals</p>
        <div class="prestige-list">
          {{#each prestiges}}
            <div class="prestige-card {{#if this.selected}}selected{{/if}}" data-prestige="{{this.name}}">
              <div class="prestige-header">
                <h5>{{this.name}}</h5>
                {{#if this.selected}}
                  <span class="selection-badge">✓ Selected</span>
                {{/if}}
              </div>
              <p class="prestige-description">{{this.description}}</p>
            </div>
          {{/each}}
        </div>
      </div>

    </div>

    <!-- Action Buttons -->
    <div class="goal-actions">
      {{#if hasSelection}}
        <button class="confirm-goal action-button primary" type="button">
          <i class="fas fa-check"></i> Confirm Path
        </button>
      {{else}}
        <button class="confirm-goal action-button primary" type="button" disabled>
          <i class="fas fa-check"></i> Confirm Path (select at least one)
        </button>
      {{/if}}
      <button class="cancel-goal action-button secondary" type="button">
        <i class="fas fa-times"></i> Cancel
      </button>
    </div>

  </div>

</div>

