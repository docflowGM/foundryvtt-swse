<div class="cart-item" data-cart-id="{{id}}" data-condition="{{condition}}">
  <!-- Item Image -->
  <img src="{{img}}" alt="{{name}}" class="cart-img" />

  <!-- Item Info -->
  <div class="cart-info">
    <div class="cart-name">{{name}}</div>

    {{#if condition}}
    {{#unless condition equals "new"}}
    <div class="cart-condition">({{condition}})</div>
    {{/unless}}
    {{/if}}

    <!-- Quantity Controls -->
    <div class="qty-controls">
      <span class="qty-label">Qty:</span>
      <button class="qty-btn qty-dec" data-item-id="{{id}}" data-condition="{{condition}}">
        <i class="{{getIconClass 'minus'}}"></i>
      </button>
      <input class="qty-input" type="number" value="{{quantity}}" min="1" data-item-id="{{id}}" />
      <button class="qty-btn qty-inc" data-item-id="{{id}}" data-condition="{{condition}}">
        <i class="{{getIconClass 'plus'}}"></i>
      </button>
    </div>
  </div>

  <!-- Line Total -->
  <div class="cart-total">
    <div class="line-total-label">Each:</div>
    <div class="line-total-price">
      <span class="credits-icon">â‚¢</span>{{cost}}
    </div>
  </div>

  <!-- Remove Button -->
  <button class="cart-remove-btn" data-item-id="{{id}}" data-condition="{{condition}}" title="Remove from cart">
    <i class="{{getIconClass 'trash'}}"></i>
  </button>
</div>
