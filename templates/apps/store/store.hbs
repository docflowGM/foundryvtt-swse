<div class="swse-sheet">
<form class="swse-store" autocomplete="off">
  {{!-- Holographic Welcome Banner --}}
  <div class="holo-banner">
    <div class="shopkeeper-portrait">
      <img src="{{rendarrImage}}" alt="Rendarr" class="rendarr-image"/>
    </div>
    <div class="holo-content">
      <div class="holo-speaker">
        <i class="fas fa-volume-up"></i>
        <span class="speaker-name">RENDARR:</span>
      </div>
      <div class="holo-message">
        "{{rendarrWelcome}}"
      </div>
    </div>
  </div>

  {{!-- Credit Wallet Display --}}
  <div class="credit-wallet">
    <div class="wallet-header">
      <i class="fas fa-wallet"></i>
      <span>ACCOUNT BALANCE</span>
    </div>
    <div class="wallet-amount">
      <span class="credits-icon">₢</span>
      <span class="remaining-credits">{{credits}}</span>
      <span class="credits-label">credits</span>
    </div>
  </div>

  {{!-- Shop Navigation with Dropdown Filter --}}
  <div class="shop-navigation">
    <div class="shop-filter-container">
      <label for="shop-category-filter">
        <i class="fas fa-filter"></i> Category:
      </label>
      <select id="shop-category-filter" class="shop-category-select">
        <option value="weapons" selected>Weapons</option>
        <option value="armor">Armor</option>
        <option value="grenades">Grenades</option>
        <option value="medical">Medical</option>
        <option value="tech">Tech</option>
        <option value="tools">Tools</option>
        <option value="survival">Survival</option>
        <option value="security">Security</option>
        <option value="equipment">Other Equipment</option>
        <option value="services">Services</option>
        <option value="droids">Droids</option>
        <option value="vehicles">Vehicles</option>
      </select>
    </div>
    <div class="shop-filter-container">
      <label for="shop-availability-filter">
        <i class="fas fa-shield-alt"></i> Availability:
      </label>
      <select id="shop-availability-filter" class="shop-availability-select">
        <option value="all" selected>All Items</option>
        <option value="Standard">Standard</option>
        <option value="Licensed">Licensed</option>
        <option value="Restricted">Restricted</option>
        <option value="Military">Military</option>
        <option value="Illegal">Illegal</option>
        <option value="Rare">Rare</option>
      </select>
    </div>
    <div class="shop-actions-bar">
      <button type="button" class="view-cart-btn holo-btn" data-tab="cart">
        <i class="fas fa-shopping-cart"></i>
        <span>Cart</span>
        <span class="cart-count" id="cart-count">0</span>
      </button>
      {{#if isGM}}
      <button type="button" class="gm-settings-btn holo-btn secondary" data-tab="gm">
        <i class="fas fa-cog"></i> GM Settings
      </button>
      {{/if}}
    </div>
  </div>

  {{!-- Shop Body --}}
  <div class="shop-body">

    {{!-- Weapons Tab --}}
    <div class="shop-panel active" data-panel="weapons">
      <div class="panel-header">
        <h4><i class="fas fa-crosshairs"></i> Weapons</h4>
        <p class="panel-desc">Blasters, vibroblades, and more</p>
      </div>
      <div class="products-list" id="weapons-list">
        {{#each categories.weapons}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              {{#if this.system.damage}}
              <span class="detail-item"><i class="fas fa-bolt"></i> {{this.system.damage}}</span>
              {{/if}}
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No weapons available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Armor Tab --}}
    <div class="shop-panel" data-panel="armor">
      <div class="panel-header">
        <h4><i class="fas fa-shield-alt"></i> Armor</h4>
        <p class="panel-desc">Protective equipment and gear</p>
      </div>
      <div class="products-list" id="armor-list">
        {{#each categories.armor}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              {{#if this.system.reflexBonus}}
              <span class="detail-item"><i class="fas fa-shield-alt"></i> +{{this.system.reflexBonus}} Reflex</span>
              {{/if}}
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No armor available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Grenades Tab --}}
    <div class="shop-panel" data-panel="grenades">
      <div class="panel-header">
        <h4><i class="fas fa-bomb"></i> Grenades & Explosives</h4>
        <p class="panel-desc">Grenades, mines, and explosive devices</p>
      </div>
      <div class="products-list" id="grenades-list">
        {{#each categories.grenades}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No grenades available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Medical Tab --}}
    <div class="shop-panel" data-panel="medical">
      <div class="panel-header">
        <h4><i class="fas fa-medkit"></i> Medical Supplies</h4>
        <p class="panel-desc">Medpacs, bacta, stims, and healing items</p>
      </div>
      <div class="products-list" id="medical-list">
        {{#each categories.medical}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No medical supplies available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Tech Tab --}}
    <div class="shop-panel" data-panel="tech">
      <div class="panel-header">
        <h4><i class="fas fa-laptop"></i> Tech Items</h4>
        <p class="panel-desc">Comlinks, datapads, scanners, and computers</p>
      </div>
      <div class="products-list" id="tech-list">
        {{#each categories.tech}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No tech items available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Tools Tab --}}
    <div class="shop-panel" data-panel="tools">
      <div class="panel-header">
        <h4><i class="fas fa-wrench"></i> Tools & Kits</h4>
        <p class="panel-desc">Repair tools, fusion cutters, and equipment kits</p>
      </div>
      <div class="products-list" id="tools-list">
        {{#each categories.tools}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No tools available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Survival Tab --}}
    <div class="shop-panel" data-panel="survival">
      <div class="panel-header">
        <h4><i class="fas fa-campground"></i> Survival Gear</h4>
        <p class="panel-desc">Rations, breath masks, climbing gear, and survival equipment</p>
      </div>
      <div class="products-list" id="survival-list">
        {{#each categories.survival}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No survival gear available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Security Tab --}}
    <div class="shop-panel" data-panel="security">
      <div class="panel-header">
        <h4><i class="fas fa-lock"></i> Security Items</h4>
        <p class="panel-desc">Binders, locks, and security devices</p>
      </div>
      <div class="products-list" id="security-list">
        {{#each categories.security}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No security items available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Other Equipment Tab --}}
    <div class="shop-panel" data-panel="equipment">
      <div class="panel-header">
        <h4><i class="fas fa-toolbox"></i> Other Equipment</h4>
        <p class="panel-desc">Miscellaneous supplies and general gear</p>
      </div>
      <div class="products-list" id="equipment-list">
        {{#each categories.equipment}}
        <div class="product-item" data-item-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              <span class="detail-desc">{{truncate this.system.description 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-item holo-btn" data-item-id="{{this._id}}">
              <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No other equipment available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Services Tab --}}
    <div class="shop-panel" data-panel="services">
      <div class="panel-header">
        <h4><i class="fas fa-concierge-bell"></i> Services & Expenses</h4>
        <p class="panel-desc">Lodging, meals, medical care, transportation, and more</p>
      </div>
      <div class="products-list services-list" id="services-list">
        {{#each categories.services}}
        <div class="service-category">
          <h5 class="service-category-name"><i class="{{this.icon}}"></i> {{this.name}}</h5>
          <div class="service-items">
            {{#each this.items}}
            <div class="product-item service-item" data-service="{{this.id}}">
              <div class="product-info">
                <h6 class="product-name">{{this.name}}</h6>
                <div class="product-details">
                  <span class="detail-desc">{{this.notes}}</span>
                </div>
              </div>
              <div class="product-actions">
                <div class="product-price">
                  <span class="credits-icon">₢</span>
                  <span class="price-amount">{{this.cost}}</span>
                </div>
                <button type="button" class="buy-service holo-btn" data-service="{{this.id}}" data-cost="{{this.cost}}" data-name="{{this.name}}">
                  <i class="fas fa-shopping-cart"></i> Purchase
                </button>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Droids Tab --}}
    <div class="shop-panel" data-panel="droids">
      <div class="panel-header">
        <h4><i class="fas fa-robot"></i> Droids</h4>
        <p class="panel-desc">Mechanical companions and assistants</p>
      </div>

      {{!-- Special: Create Custom Droid --}}
      <div class="special-purchase-section">
        <div class="special-card create-droid-card">
          <div class="special-icon">
            <i class="fas fa-wrench"></i>
          </div>
          <div class="special-info">
            <h5>Build a Custom Droid</h5>
            <p>Design your own droid companion from scratch using the droid construction system.</p>
            <p class="special-price"><strong>Minimum:</strong> 1,000 credits</p>
          </div>
          <button type="button" class="create-custom-droid holo-btn special" {{#if (lt credits 1000)}}disabled{{/if}}>
            <i class="fas fa-tools"></i> Build Droid
          </button>
        </div>
      </div>

      {{!-- Pre-Made Droids from Database --}}
      <div class="products-list" id="droids-list">
        {{#each categories.droids}}
        <div class="product-item droid-item" data-actor-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              {{#if this.system.level}}
              <span class="detail-item"><i class="fas fa-level-up-alt"></i> Level {{this.system.level}}</span>
              {{/if}}
              <span class="detail-desc">{{truncate this.system.biography 120}}</span>
            </div>
          </div>
          <div class="product-actions">
            <div class="product-price">
              <span class="credits-icon">₢</span>
              <span class="price-amount">{{this.finalCost}}</span>
            </div>
            <button type="button" class="buy-droid holo-btn" data-actor-id="{{this._id}}">
              <i class="fas fa-shopping-cart"></i> Purchase
            </button>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No pre-made droids available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Vehicles Tab --}}
    <div class="shop-panel" data-panel="vehicles">
      <div class="panel-header">
        <h4><i class="fas fa-rocket"></i> Vehicles & Starships</h4>
        <p class="panel-desc">Transportation and combat vehicles</p>
      </div>

      {{!-- Special: Build Custom Starship --}}
      <div class="special-purchase-section">
        <div class="special-card create-starship-card">
          <div class="special-icon">
            <i class="fas fa-space-shuttle"></i>
          </div>
          <div class="special-info">
            <h5>Build a Custom Starship</h5>
            <p>Work with Marl Skindar, Republic Intelligence, to design and modify your own starship from stock hull to fully customized vessel.</p>
            <p class="special-price"><strong>Minimum:</strong> 5,000 credits (Light Fighter base)</p>
          </div>
          <button type="button" class="create-custom-starship holo-btn special" {{#if (lt credits 5000)}}disabled{{/if}}>
            <i class="fas fa-tools"></i> Build Starship
          </button>
        </div>
      </div>

      {{!-- Pre-Made Vehicles from Database --}}
      <div class="products-list" id="vehicles-list">
        {{#each categories.vehicles}}
        <div class="product-item vehicle-item" data-actor-id="{{this._id}}">
          <div class="product-info">
            <h5 class="product-name">{{this.name}}</h5>
            <div class="product-details">
              {{#if this.system.speed}}
              <span class="detail-item"><i class="fas fa-tachometer-alt"></i> Speed {{this.system.speed}}</span>
              {{/if}}
              <span class="detail-desc">{{truncate this.system.biography 120}}</span>
            </div>
          </div>
          <div class="product-actions vehicle-actions">
            <div class="vehicle-pricing">
              <div class="price-option">
                <span class="option-label">New:</span>
                <span class="credits-icon">₢</span>
                <span class="price-amount">{{this.finalCost}}</span>
              </div>
              <div class="price-option">
                <span class="option-label">Used:</span>
                <span class="credits-icon">₢</span>
                <span class="price-amount">{{this.finalCostUsed}}</span>
              </div>
            </div>
            <div class="vehicle-buttons">
              <button type="button" class="buy-vehicle holo-btn" data-actor-id="{{this._id}}" data-condition="new">
                <i class="fas fa-shopping-cart"></i> Buy New
              </button>
              <button type="button" class="buy-vehicle holo-btn secondary" data-actor-id="{{this._id}}" data-condition="used">
                <i class="fas fa-shopping-cart"></i> Buy Used
              </button>
            </div>
          </div>
        </div>
        {{else}}
        <div class="empty-message">
          <i class="fas fa-box-open"></i>
          <p>No vehicles available in the database.</p>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Cart Tab --}}
    <div class="shop-panel cart-panel" data-panel="cart">
      <div class="panel-header">
        <h4><i class="fas fa-shopping-cart"></i> Your Cart</h4>
        <p class="panel-desc">Review your purchases</p>
      </div>

      <div class="cart-container">
        <div class="cart-items" id="cart-items-list">
          {{!-- Populated by JavaScript --}}
        </div>

        <div class="cart-summary">
          <div class="summary-line">
            <span class="summary-label">Subtotal:</span>
            <span class="summary-value">
              <span class="credits-icon">₢</span>
              <span id="cart-subtotal">0</span>
            </span>
          </div>
          <div class="summary-line total-line">
            <span class="summary-label">Total Cost:</span>
            <span class="summary-value">
              <span class="credits-icon">₢</span>
              <span id="cart-total">0</span>
            </span>
          </div>
          <div class="summary-line remaining-line">
            <span class="summary-label">Remaining Credits:</span>
            <span class="summary-value" id="remaining-credits-preview">
              <span class="credits-icon">₢</span>
              <span id="cart-remaining">{{credits}}</span>
            </span>
          </div>
        </div>

        <div class="cart-actions">
          <button type="button" class="checkout-btn holo-btn" id="checkout-cart">
            <i class="fas fa-credit-card"></i> Complete Purchase
          </button>
          <button type="button" class="clear-cart-btn holo-btn secondary" id="clear-cart">
            <i class="fas fa-trash"></i> Clear Cart
          </button>
        </div>
      </div>
    </div>

    {{!-- GM Tab --}}
    {{#if isGM}}
    <div class="shop-panel gm-panel" data-panel="gm">
      <div class="panel-header">
        <h4><i class="fas fa-cog"></i> GM Controls</h4>
        <p class="panel-desc">Configure store settings</p>
      </div>

      <div class="gm-controls-grid">
        <div class="control-group">
          <label>Global Markup (%)</label>
          <input type="number" name="markup" value="{{markup}}" data-dtype="Number" placeholder="0"/>
          <p class="control-hint">Increase prices by this percentage</p>
        </div>

        <div class="control-group">
          <label>Global Discount (%)</label>
          <input type="number" name="discount" value="{{discount}}" data-dtype="Number" placeholder="0"/>
          <p class="control-hint">Decrease prices by this percentage</p>
        </div>

        <button type="button" class="save-gm holo-btn">
          <i class="fas fa-save"></i> Save Settings
        </button>
      </div>
    </div>
    {{/if}}

  </div>{{!-- shop-body --}}
</form>
</div>{{!-- swse-sheet --}}
