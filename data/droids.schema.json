{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Droids",
  "description": "Schema for droid NPCs in SWSE",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "const": "droid"
    },
    "degree": {
      "type": ["string", "null"],
      "enum": ["1st-Degree", "2nd-Degree", "3rd-Degree", "4th-Degree", "5th-Degree", null]
    },
    "initiative": {
      "type": ["number", "null"]
    },
    "senses": {
      "type": "string"
    },
    "perception": {
      "type": "number"
    },
    "reflexDefense": {
      "type": "number"
    },
    "flatFooted": {
      "type": "number"
    },
    "fortitudeDefense": {
      "type": "number"
    },
    "willDefense": {
      "type": "number"
    },
    "HP": {
      "type": "number"
    },
    "damageThreshold": {
      "type": "number"
    },
    "speed": {
      "type": ["string", "null"]
    },
    "baseAttackBonus": {
      "type": ["number", "null"]
    },
    "grapple": {
      "type": ["number", "null"]
    },
    "attacks": {
      "type": "object",
      "properties": {
        "melee": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "bonus": {
                "type": "number"
              },
              "damage": {
                "type": "string"
              }
            },
            "required": ["name", "bonus", "damage"]
          }
        },
        "ranged": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "bonus": {
                "type": "number"
              },
              "damage": {
                "type": "string"
              }
            },
            "required": ["name", "bonus", "damage"]
          }
        }
      },
      "required": ["melee", "ranged"]
    },
    "baseStats": {
      "type": "object",
      "properties": {
        "abilities": {
          "type": "object",
          "properties": {
            "strength": {
              "type": "number"
            },
            "dexterity": {
              "type": "number"
            },
            "intelligence": {
              "type": "number"
            },
            "wisdom": {
              "type": "number"
            },
            "charisma": {
              "type": "number"
            }
          },
          "required": ["strength", "dexterity", "intelligence", "wisdom", "charisma"]
        }
      },
      "required": ["abilities"]
    },
    "skills": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "incomplete": {
      "type": "boolean",
      "description": "Flag indicating if this droid entry is incomplete"
    }
  },
  "required": ["name", "type", "attacks"]
}
